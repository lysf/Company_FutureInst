<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:paddingLeft="@dimen/margin_20"
              android:paddingRight="@dimen/margin_20"
              android:gravity="center_vertical"
              android:paddingTop="@dimen/activity_login_margin_10"
              android:paddingBottom="@dimen/activity_login_margin_10"
              android:background="@color/text_color_white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_type"
        android:text="充值100未币"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/text_color_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_marginTop="@dimen/activity_login_margin_10"
        android:textSize="@dimen/text_size_small_12"
        android:textColor="@color/text_color_b"
        android:text="2015-12-14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
    <TextView
        android:id="@+id/tv_price"
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/text_color_4"
        android:text="10.00"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>