<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/widget_height_30"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@drawable/view_shap"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="一键PK"
            android:textSize="@dimen/text_size_large_20"
            android:textColor="@color/text_color_4"
            android:background="@drawable/simple_top_bg"/>
        <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/margin_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_title"
                android:layout_marginBottom="@dimen/activity_login_margin_10"
                android:text="北约下令飞行员可向俄罗斯战机开火对峙一触即发？"
                android:textColor="@color/text_color_4"
                android:textSize="@dimen/text_size_normal"
                android:lineSpacingExtra="@dimen/dimen_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_marginBottom="@dimen/activity_login_margin_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="@dimen/text_size_normal"
                    android:text="我："
                    android:textColor="@color/text_color_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_attitude"
                    android:textSize="@dimen/text_size_normal"
                    android:text="看好"
                    android:textColor="@color/text_color_b"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <include layout="@layout/view_line"/>
            <com.futureinst.widget.list.MyGridView
                android:id="@+id/gv_simple_order"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_marginBottom="@dimen/margin_20"
                android:numColumns="2"
                android:columnWidth="@dimen/margin_20"
                android:verticalSpacing="@dimen/ebpay_line_margin_15"
                android:stretchMode="columnWidth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:paddingTop="@dimen/activity_login_margin_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/tixing_cut"
                    android:paddingRight="@dimen/activity_login_margin_10"
                    android:layout_marginTop="@dimen/dimen_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_max_order"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/text_color_b"
                    android:text="还可投入2000未币看好此事件"
                    android:lineSpacingExtra="@dimen/dimen_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:paddingTop="@dimen/margin_15"
            android:paddingBottom="@dimen/margin_15"
            android:minHeight="@dimen/widget_height_55"
            android:background="@drawable/simple_order_bottom_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_cancel"
                android:background="@drawable/btn_tran_bg"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:text="取消"
                android:layout_marginRight="@dimen/margin_15"
                android:textSize="@dimen/text_size_large_18"
                android:textColor="@color/text_color_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btn_submit"
                android:background="@drawable/btn_tran_bg"
                android:text="确定"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_marginLeft="@dimen/margin_15"
                android:textSize="@dimen/text_size_large_18"
                android:textColor="@color/text_color_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>