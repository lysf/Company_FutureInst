<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:padding="@dimen/activity_login_margin_10"
    android:background="@drawable/toast_back"
    android:orientation="vertical" >
    <ImageView
        android:id="@+id/iv_tag"
        android:src="@drawable/toast_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView 
        android:id="@+id/tvTitleToast"
        android:layout_marginTop="@dimen/activity_login_margin_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/widget_height_35"
        android:textSize="@dimen/text_size_normal"
        android:text="用户名错误"
        android:textColor="@color/text_color_white"
        />

</LinearLayout>
