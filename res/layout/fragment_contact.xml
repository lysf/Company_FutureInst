<com.futureinst.widget.scrollview.MyScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_white"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:paddingLeft="@dimen/margin_20"
        android:paddingRight="@dimen/margin_20"
        android:paddingTop="50dp"
        android:paddingBottom="@dimen/activity_login_margin_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text1"
            android:text="客服电话: 010-64788187"
            android:textColor="@color/text_color_4"
            android:textSize="@dimen/text_size_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="@dimen/activity_login_margin_10"
            android:layout_toLeftOf="@+id/iv_tell"
            android:layout_alignParentLeft="true"
            android:text="注: 请在工作日10:00~19:00时段内拨打"
            android:textSize="@dimen/text_size_small_12"
            android:textColor="@color/text_color_9"
            android:layout_below="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/iv_tell"
            android:layout_alignParentRight="true"
            android:src="@drawable/tell"
            android:background="@drawable/ripple_shap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <include layout="@layout/view_line"/>
    <LinearLayout
        android:paddingLeft="@dimen/margin_20"
        android:paddingRight="@dimen/margin_20"
        android:paddingTop="@dimen/activity_login_margin_10"
        android:paddingBottom="@dimen/activity_login_margin_10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="客服邮箱: service@tmrexchange.com"
            android:textColor="@color/text_color_4"
            android:textSize="@dimen/text_size_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="@dimen/activity_login_margin_10"
            android:layout_toLeftOf="@+id/iv_tell"
            android:layout_alignParentLeft="true"
            android:text="注: 工作时间回复"
            android:textSize="@dimen/text_size_small_12"
            android:textColor="@color/text_color_9"
            android:layout_below="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <include layout="@layout/view_line"/>
    <TextView

        android:text="QQ群: 288434615"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_20"
        android:paddingRight="@dimen/margin_20"
        android:paddingTop="@dimen/activity_login_margin_10"
        android:paddingBottom="@dimen/activity_login_margin_10"
        android:textColor="@color/text_color_4"
        android:minHeight="@dimen/widget_height_50"
        android:textSize="@dimen/text_size_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <include layout="@layout/view_line"/>
    <LinearLayout
        android:id="@+id/ll_feed"
        android:background="@drawable/item_select"
        android:minHeight="@dimen/widget_height_50"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_20"
        android:paddingRight="@dimen/margin_20"
        android:paddingTop="@dimen/activity_login_margin_10"
        android:paddingBottom="@dimen/activity_login_margin_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView

            android:text="App内提交"
            android:gravity="center_vertical"
            android:textColor="@color/text_color_4"
            android:textSize="@dimen/text_size_normal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <ImageView
            android:src="@drawable/right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <include layout="@layout/view_line"/>
    <RelativeLayout
        android:paddingTop="@dimen/activity_login_margin_10"
        android:paddingLeft="@dimen/margin_20"
        android:paddingRight="@dimen/margin_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="微信公众号"
            android:textColor="@color/text_color_4"
            android:textSize="@dimen/text_size_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginTop="60dp"
            android:layout_marginBottom="60dp"
            android:src="@drawable/erweima"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</LinearLayout>
</com.futureinst.widget.scrollview.MyScrollView>