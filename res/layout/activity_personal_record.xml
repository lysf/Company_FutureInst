<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_white"
    android:orientation="vertical" >

    <include layout="@layout/fragment_record_top" />

    <LinearLayout 
        android:id="@+id/ll_total"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_height_50"
        android:background="@drawable/item_select"
        android:gravity="center_vertical"
        android:orientation="horizontal">
       
            <TextView 
            android:id="@+id/tv_type"
             android:layout_width="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_color_3"
            android:text="总战绩"
            />
        
        <TextView 
            android:id="@+id/tv_gainTotal"
            android:layout_width="0dip"
            android:layout_weight="1.5"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_color_3"
            />
        <TextView 
            android:id="@+id/tv_avgGain"
            android:layout_width="0dip"
            android:layout_weight="1.3"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_color_3"
            />
        <TextView 
            android:id="@+id/tv_gainNumber"
            android:layout_width="0dip"
            android:layout_weight="1.3"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_color_3"
            />
        <TextView 
            android:id="@+id/tv_odds"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_color_3"
            />
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_login_margin_10"
            android:src="@drawable/right_arrow"/>
    </LinearLayout>
	<TextView 
	    android:id="@+id/tv_type_record"
	    android:gravity="center"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:paddingTop="@dimen/margin_5"
	    android:paddingBottom="@dimen/margin_5"
	    android:paddingLeft="@dimen/activity_login_margin_10"
	    android:background="@color/text_color_e"
	    android:textSize="@dimen/text_size_small"
	    android:textColor="@color/text_color_3"
	    android:text="分类战绩"/>
	<ListView 
	    android:id="@+id/lv_record"
	    android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:scrollbars="none"
		android:dividerHeight="@dimen/line_height"
		android:divider="@color/text_color_e"/>
</LinearLayout>
