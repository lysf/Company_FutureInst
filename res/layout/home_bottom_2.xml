<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	    android:layout_height="@dimen/widget_height_45"
	    android:orientation="horizontal"
	    android:paddingLeft="@dimen/activity_login_margin_10"
	    android:paddingRight="@dimen/activity_login_margin_10"
	    android:paddingTop="@dimen/margin_5"
	    android:paddingBottom="@dimen/margin_5"
	    android:gravity="center_vertical">
	    
	    <ImageView 
	        android:id="@+id/iv_home_type_2"
	        android:contentDescription="@string/app_name"
	         android:layout_width="0dip"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:src="@drawable/a_hp_1_btn_01_1"/>
	    <ImageView 
	        android:id="@+id/iv_home_search_2"
	        android:visibility="gone"
	         android:contentDescription="@string/app_name"
	        android:layout_marginLeft="@dimen/activity_login_margin_10"
	         android:layout_width="0dip"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:src="@drawable/a_hp_1_btn_02_1"/>
	    <ImageView 
	        android:id="@+id/iv_home_cc_2"
	          android:layout_marginLeft="@dimen/margin_5"
	        android:layout_width="0dip"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:src="@drawable/a_hp_1_btn_03_1"/>
	    <FrameLayout 
	        android:layout_width="0dip"
	        android:layout_weight="4"
	        android:layout_height="match_parent">
	        <LinearLayout 
	            android:id="@+id/ll_login_2"
	            android:visibility="visible"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:gravity="center_vertical|right">
	            <LinearLayout 
	                android:id="@+id/ll_ranking_2"
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:gravity="center"
	                android:orientation="horizontal">
	                <TextView 
	                android:id="@+id/tv_ranking_2"
	                android:paddingLeft="@dimen/activity_login_margin_10"
	                android:gravity="center_vertical|right"
	                android:layout_width="wrap_content"
	                android:minWidth="@dimen/widget_height_50"
	                android:layout_height="match_parent"
	                android:textColor="@color/text_color_3"
	                android:textSize="@dimen/text_size_normal"/>
	            <ImageView 
	                android:id="@+id/iv_ranking_status_2"
	                android:contentDescription="@string/app_name"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:src="@drawable/ranking_status"/>
	            </LinearLayout>
	            
	            <RelativeLayout 
	                android:layout_width="@dimen/widget_height_50"
	                android:layout_height="match_parent">
	                 <ImageView 
	                android:id="@+id/iv_login_2"
	                android:contentDescription="@string/app_name"
	                android:layout_width="wrap_content"
	                android:minWidth="@dimen/widget_height_50"
	                android:layout_height="match_parent"
	                android:src="@drawable/a_hp_1_btn_04_1"/>
	                 <TextView
                            android:id="@+id/tv_message_count_2"
                            android:layout_width="@dimen/margin_15"
                            android:layout_height="@dimen/margin_15"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/margin_5"
                            android:layout_marginTop="@dimen/margin_5"
                            android:background="@drawable/point_red"
                            android:gravity="center"
                            android:textColor="@color/text_color_white"
                            android:textSize="9sp"
                            android:text="20"
                            android:visibility="visible" />
	            </RelativeLayout>
	        </LinearLayout>
	        <LinearLayout 
	            android:id="@+id/ll_unLogin_2"
	            android:visibility="gone"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:gravity="center_vertical|right">
	            <TextView 
	                android:id="@+id/tv_unLogin_2"
	                android:gravity="center"
	                android:text="@string/unLogin"
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:textSize="@dimen/text_size_normal"
	                android:textColor="@color/text_color_6"/>
	        </LinearLayout>
	        
	    </FrameLayout>
</LinearLayout>
