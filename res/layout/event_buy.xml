<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:scrollbars="none"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:background="@color/text_color_white">
    

<LinearLayout 
    android:id="@+id/ll_event_buy"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/text_color_white"
    android:gravity="center_horizontal"
    android:paddingBottom="@dimen/margin_20"
    android:orientation="vertical" >
    <View 
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/text_color_e"/>
    <LinearLayout 
        android:layout_marginTop="@dimen/widget_height_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">
        <TextView 
             android:layout_marginLeft="@dimen/margin_20"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="价  格"
            android:textSize="@dimen/text_size_large"
            android:textColor="#1D2A98"/>
        <ImageView 
            android:id="@+id/price_sub"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/widget_height_40"
            android:src="@drawable/sub"/>
        <EditText 
        android:id="@+id/et_price"
        android:layout_marginLeft="@dimen/activity_login_margin_10"
        android:layout_marginRight="@dimen/activity_login_margin_10"
        android:gravity="center"
        android:layout_width="100dip"
       	android:hint="0.1~99.9"
       	android:inputType="numberDecimal"
       	android:maxLength="4"
        android:layout_height="@dimen/widget_height_40"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/text_color_3"
        android:background="@drawable/edit_back"/>
         <ImageView 
            android:id="@+id/price_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_20"
            android:src="@drawable/add"/>
         
         </LinearLayout>
         <TextView 
             android:id="@+id/tv_tip"
             android:layout_marginLeft="@dimen/activity_login_margin_10"
             android:layout_marginTop="@dimen/margin_20"
             android:layout_marginBottom="@dimen/activity_login_margin_10"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textSize="@dimen/text_size_small"
             android:textColor="@color/text_color_9"
             android:text="@string/buy_tip_buy"/>
         <View 
             android:layout_width="match_parent"
             android:layout_height="@dimen/line_height"
             android:background="@color/text_color_e"/>
    <LinearLayout 
        android:layout_marginTop="@dimen/widget_height_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">
        <TextView 
             android:layout_marginLeft="@dimen/margin_20"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="份  数"
            android:textSize="@dimen/text_size_large"
            android:textColor="#1D2A98"/>
        <ImageView 
            android:id="@+id/number_sub"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/widget_height_40"
            android:src="@drawable/sub"/>
        <EditText 
        android:id="@+id/et_num"
        android:layout_marginLeft="@dimen/activity_login_margin_10"
        android:layout_marginRight="@dimen/activity_login_margin_10"
        android:gravity="center"
        android:layout_width="100dip"
        android:inputType="phone"
        android:digits="1234567890"
		android:singleLine="true" 
        android:hint="1~100"
        android:layout_height="@dimen/widget_height_40"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/text_color_3"
        android:background="@drawable/edit_back"/>
        <ImageView 
            android:id="@+id/number_add"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/margin_20"
            android:src="@drawable/add"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_color_e"
        android:layout_marginTop="@dimen/margin_20"
        android:padding="@dimen/activity_login_margin_10"
             android:gravity="center_horizontal"
             android:orientation="vertical">

        <TextView
            android:id="@+id/tv_total_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dip"
            android:textColor="@color/text_color_9"
            android:textSize="@dimen/text_size_normal"
            android:visibility="visible" />
        <TextView
            android:id="@+id/tv_total_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dip"
            android:textColor="@color/text_color_9"
            android:textSize="@dimen/text_size_normal"
            android:visibility="visible" />
        <TextView
            android:id="@+id/tv_total_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dip"
            android:textColor="@color/text_color_9"
            android:textSize="@dimen/text_size_normal"
            android:visibility="visible" />
        <TextView
            android:id="@+id/tv_total_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="3dip"
            android:textColor="@color/text_color_9"
            android:textSize="@dimen/text_size_normal"
            android:visibility="visible" />
 
    <Button
        android:id="@+id/btn_type"
        android:layout_width="wrap_content"
        android:minWidth="100dip"
        android:layout_marginBottom="@dimen/widget_height_30"
        android:textColor="@color/text_color_white"
        android:paddingLeft="@dimen/margin_15"
        android:paddingRight="@dimen/margin_15"
        android:layout_marginTop="@dimen/margin_20"
        android:layout_height="@dimen/widget_height_45"
        android:textSize="@dimen/text_size_large"
        android:gravity="center"
        android:background="@drawable/btn_buy_back"
        android:text="看好" />
       </LinearLayout>
        <include 
            layout="@layout/view_priceview"/>
</LinearLayout>
</ScrollView>