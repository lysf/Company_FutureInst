<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
     xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_select"
    android:orientation="vertical"
     >
     <View 
         android:id="@+id/diver"
         android:layout_width="match_parent"
         android:layout_height="@dimen/activity_login_margin_10"
         android:background="#D9D9D9"/>
    <RelativeLayout 
    android:id="@+id/rl_forecast"
    android:layout_width="match_parent"
    android:layout_height="250dip"
    >
    <ImageView 
        android:id="@+id/iv_image"
        android:layout_width="match_parent"
        android:layout_height="180dip"
        android:scaleType="centerCrop"
        />
	<View 
	    android:id="@+id/view_line"
	    android:layout_width="match_parent"
	    android:layout_height="4dip"
	    />
	<com.futureinst.widget.MyTextView
	    android:id="@+id/tv_special"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="专题"
	    android:paddingLeft="@dimen/margin_5"
	    android:paddingTop="@dimen/activity_login_margin_10"
	    android:textSize="@dimen/text_size_normal"
	    android:textColor="@color/text_color_white"
	    />
	<TextView 
	    android:id="@+id/tv_time"
	    android:layout_marginLeft="@dimen/activity_login_margin_10"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingTop="@dimen/margin_5"
        android:paddingBottom="@dimen/margin_5"
        android:paddingLeft="@dimen/margin_5"
        android:paddingRight="@dimen/activity_login_margin_10"
	    android:textSize="@dimen/text_size_normal"
	    android:textColor="@color/text_color_white"
	    android:drawableLeft="@drawable/iv_time"
	    android:background="@color/tab_text_selected"
	    />
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@+id/iv_image"
	    android:background="#F1F0F0"
	    />
	<LinearLayout 
	    android:id="@+id/ll_circle"
	    android:layout_width="100dip"
	    android:layout_height="100dip"
	    android:layout_alignParentBottom="true"
	    android:layout_alignParentRight="true"
	    android:gravity="center_vertical"
	    android:layout_marginRight="@dimen/margin_15"
	    android:layout_marginBottom="@dimen/margin_20"
	    android:orientation="horizontal"/>
	
	<TextView
	    android:id="@+id/tv_title"
	    android:paddingLeft="@dimen/margin_15"
	    android:paddingRight="@dimen/margin_5"
	    android:paddingTop="@dimen/margin_5"
	    android:paddingBottom="@dimen/margin_5"
	    android:gravity="center_vertical"
	    android:lineSpacingExtra="@dimen/line_height"
	    android:textSize="@dimen/text_size_large"
	    android:textColor="@color/text_color_6"
	    android:layout_width="match_parent"
	    android:layout_height="70dip"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@+id/iv_image"
	    android:layout_toLeftOf="@id/ll_circle"
	     />

</RelativeLayout>
<View 
   android:background="@color/text_color_9"
    android:layout_width="match_parent"
    android:layout_height="@dimen/line_height"
    />
</LinearLayout>

