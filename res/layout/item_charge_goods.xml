<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/margin_20"
    android:paddingRight="@dimen/activity_login_margin_10"
    android:paddingTop="@dimen/activity_login_margin_10"
    android:paddingBottom="@dimen/activity_login_margin_10"
    android:layout_height="wrap_content"
    android:background="@drawable/item_select"
    >
    <LinearLayout
        android:background="@drawable/shape_charge_type"
        android:gravity="center"
        android:minWidth="120dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


<TextView
    android:id="@+id/tv_goods_name"
    android:textSize="@dimen/text_size_large"
    android:textColor="@color/text_color_4"
    android:text="100"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    <TextView
        android:layout_toRightOf="@+id/tv_goods_name"
        android:text="未币"
        android:textColor="@color/text_color_4"
        android:textSize="@dimen/text_size_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_goods_price"
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/text_color_4"
        android:text="1元"
        android:gravity="center"
        android:minWidth="100dp"
        android:background="@drawable/shape_charge_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>