<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_e"
    android:scrollbars="none"
    android:orientation="vertical" >
    <LinearLayout 
        android:id="@+id/ll_add_comment"
        android:padding="@dimen/margin_20"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    
	    android:paddingTop="@dimen/margin_5"
	    android:paddingBottom="@dimen/margin_5">
	    <Button 
	        android:id="@+id/btn_attention_good"
	        android:layout_width="80dip"
	        android:layout_height="@dimen/widget_height_40"
	        android:textSize="@dimen/text_size_normal"
	        android:textColor="@color/text_color_white"
	        android:background="@drawable/btn_buy_back"
	        android:alpha="0.3"
	        android:text="看好"/>
	    <Button 
	        android:id="@+id/btn_attention_bad"
	        android:layout_marginLeft="@dimen/margin_20"
	        android:layout_width="80dip"
	        android:layout_height="@dimen/widget_height_40"
	        android:textSize="@dimen/text_size_normal"
	        android:textColor="@color/text_color_white"
	        android:background="@drawable/btn_sell_back"
	        android:alpha="0.3"
	        android:text="不看好"/>
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:gravity="bottom"
	        android:layout_marginLeft="@dimen/activity_login_margin_10"
	        android:text="(评论请先选择态度)"
	        android:textSize="@dimen/text_size_small"
	        android:textColor="@color/text_color_6"/>
	</LinearLayout>

	<EditText 
	    android:id="@+id/et_comment"
	    android:layout_marginTop="@dimen/margin_20"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/edit_gray_back"
	    android:textSize="@dimen/text_size_normal"
	    android:lineSpacingExtra="2dip"
	    android:hint="在这里添加评论（500字以内）"
	    android:gravity="top"
	    android:textColorHint="@color/text_color_9"
	    android:textColor="@color/text_color_6"
	    android:maxLength="500"
	    android:focusableInTouchMode="true"
	    android:minHeight="200dip"/>
	<LinearLayout 
	    android:padding="@dimen/margin_15"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center">
	    <Button 
	        android:id="@+id/btn_publish"
	        android:layout_width="80dip"
	        android:text="发布"
	        android:background="@drawable/btn_publish"
	        android:layout_height="@dimen/widget_height_40"
	        android:textSize="@dimen/text_size_normal"
	        android:textColor="@color/text_color_white"/>
	</LinearLayout>
	</LinearLayout>
</ScrollView>
