<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <View 
        android:layout_width="4dip"
        android:layout_height="match_parent"
        android:background="@color/forecast_bottom_line_select"
        />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_refrence"
        android:orientation="vertical">
         <TextView 
        android:id="@+id/tv_refrence"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_login_margin_10"
        android:minHeight="40dip"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/text_color_6"/>
         <TextView 
             android:id="@+id/tv_from"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="@dimen/activity_login_margin_10"
             android:layout_marginBottom="@dimen/margin_5"
             android:textSize="@dimen/text_size_small"
             android:textColor="@color/text_color_6"/>
    </LinearLayout>
</LinearLayout>
