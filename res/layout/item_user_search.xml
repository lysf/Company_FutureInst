<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:background="@drawable/item_select"
              android:paddingTop="@dimen/activity_login_margin_10"
              android:paddingBottom="@dimen/activity_login_margin_10"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <com.futureinst.roundimageutils.RoundedImageView
        android:id="@+id/iv_headImg"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo"
        app:corner_radius="8dip"
        app:mutate_background="true"
        app:oval="true" />
    <TextView
        android:id="@+id/tv_userName"
        android:gravity="center_vertical"
        android:text="咒术热播"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/text_color_4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>