<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/text_color_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/margin_20"
        android:paddingLeft="@dimen/margin_20"
        android:paddingTop="@dimen/activity_login_margin_10"
        android:paddingBottom="@dimen/activity_login_margin_10"
        >
        <TextView
            android:drawableLeft="@drawable/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 精选观点"
            android:textColor="@color/text_color_4"
            android:textSize="@dimen/text_size_large"/>
        <ImageView
            android:id="@+id/iv_editPoint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/edit_comment"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/text_color_e"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/view_point"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/view_comment_main"/>
        <LinearLayout
            android:id="@+id/ll_empty_point"
            android:visibility="visible"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <TextView
                android:text="写下你的观点，马上抢首发"
                android:textColor="@color/text_color_9"
                android:textSize="@dimen/text_size_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_empty_point"
                android:layout_marginLeft="@dimen/activity_login_margin_10"
                android:src="@drawable/edit_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <View
        android:background="@color/text_color_e"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_20"/>
</LinearLayout>