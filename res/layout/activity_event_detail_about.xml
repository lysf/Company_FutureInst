<?xml version="1.0" encoding="utf-8"?>

<com.futureinst.widget.PullLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    >
   
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/text_color_white"
    >
    <include 
        android:id="@+id/view_top"
        layout="@layout/eventdetail_top"/>
    <FrameLayout
            android:id="@+id/fl_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/view_top"
           	android:background="#f2f2f2"
             >
     <LinearLayout
        android:id="@+id/ll_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f2"
        android:orientation="vertical" >
        
        <TextView 
	    android:id="@+id/tv_description"
	    android:layout_marginTop="@dimen/margin_20"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="#f2f2f2"
	    android:padding="@dimen/margin_20"
	    android:textSize="@dimen/text_size_normal"
	    android:textColor="@color/text_color_6"
	    android:lineSpacingExtra="3dip"
	    />
	<LinearLayout
	    android:gravity="center"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="#f2f2f2"
	    android:orientation="horizontal">
        
        <com.futureinst.widget.WaterWaveView
	    android:id="@+id/wav"
	    android:layout_width="120dip"
	    android:layout_height="120dip"
	    android:gravity="center_vertical"
	    
	     />
        </LinearLayout>
         <include
             layout="@layout/view_priceview"/>
         <include 
		    android:id="@+id/view_singlev_event"
		    android:visibility="gone"
		    layout="@layout/view_event_detail_11"/>
         <include 
             layout="@layout/forecast_bottom"/>
      </LinearLayout>
      </FrameLayout>
      <TextView 
            android:id="@+id/tv_event_title"
            android:layout_marginLeft="@dimen/margin_20"
            android:layout_marginBottom="@dimen/activity_login_margin_10"
            android:layout_marginRight="95dip"
            android:paddingBottom="@dimen/activity_login_margin_10"
            android:layout_alignBottom="@+id/view_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_large"
            />
</RelativeLayout>
</com.futureinst.widget.PullLayout>
