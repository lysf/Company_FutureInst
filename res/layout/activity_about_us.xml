<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_white"
    android:orientation="vertical" >
    <View 
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/text_color_e"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout 
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button 
            android:id="@+id/btn_future"
            android:layout_width="match_parent"
            android:textSize="@dimen/text_size_normal"
             android:text="@string/app_name"
            android:background="@null"
            android:textColor="@color/text_color_3"
            android:layout_height="@dimen/widget_height_40"/>
            <View 
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_3"
                android:layout_marginLeft="@dimen/margin_5"
		        android:layout_marginRight="@dimen/margin_5"
		        android:background="@drawable/forecast_botom_line"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button 
            android:id="@+id/btn_media_report"
            android:layout_width="match_parent"
            android:textSize="@dimen/text_size_normal"
             android:text="@string/media_report"
            android:background="@null"
            android:textColor="@color/text_color_3"
            android:layout_height="@dimen/widget_height_40"/>
            <View 
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_3"
                android:layout_marginLeft="@dimen/margin_5"
		        android:layout_marginRight="@dimen/margin_5"
		        android:background="@drawable/forecast_botom_line"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button 
            android:id="@+id/btn_contact_us"
            android:layout_width="match_parent"
            android:textSize="@dimen/text_size_normal"
             android:text="@string/contact_us"
            android:background="@null"
            android:textColor="@color/text_color_3"
            android:layout_height="@dimen/widget_height_40"/>
            <View 
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_3"
                android:layout_marginLeft="@dimen/margin_5"
		        android:layout_marginRight="@dimen/margin_5"
		        android:background="@drawable/forecast_botom_line"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button 
            android:id="@+id/btn_guidang"
            android:layout_width="match_parent"
            android:textSize="@dimen/text_size_normal"
             android:text="@string/guidang"
            android:background="@null"
            android:textColor="@color/text_color_3"
            android:layout_height="@dimen/widget_height_40"/>
            <View 
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_3"
                android:layout_marginLeft="@dimen/margin_5"
		        android:layout_marginRight="@dimen/margin_5"
		        android:background="@drawable/forecast_botom_line"/>
        </LinearLayout>
        
        
    </LinearLayout>
    <View 
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/line_height"
		    android:background="@color/text_color_e"/>
    <android.support.v4.view.ViewPager
	    android:id="@+id/container"
	    android:layout_width="match_parent"
	    android:layout_height="0dip"
	    android:layout_weight="1"
	    android:background="@color/text_color_white"
	    android:clipChildren="false" >
	</android.support.v4.view.ViewPager>
</LinearLayout>
