<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_white"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_height_35"
        android:orientation="horizontal">
        <Button 
            android:id="@+id/btn_future"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:background="@drawable/btn_aboutus_back"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/text_color_3"
            android:text="@string/company_name"
            android:layout_height="match_parent"/>
        <Button 
            android:id="@+id/btn_media_report"
            android:layout_marginLeft="@dimen/line_height"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/text_color_3"
            android:text="@string/media_report"
            android:background="@drawable/btn_aboutus_back"
            android:layout_height="match_parent"/>
        <Button 
            android:id="@+id/btn_contact_us"
             android:layout_marginLeft="@dimen/line_height"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/text_color_3"
            android:text="@string/contact_us"
            android:background="@drawable/btn_aboutus_back"
            android:layout_height="match_parent"/>
    </LinearLayout>
	<WebView 
	    android:id="@+id/webView"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:scrollbars="none"/>
</LinearLayout>
