<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingBottom="@dimen/widget_height_50"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
   <LinearLayout 
        android:layout_width="200dip"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_login_margin_10"
        android:orientation="horizontal">
        <Button 
            android:id="@+id/btn_ranking"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="@dimen/widget_height_35"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@drawable/text_color_white_black"
            android:background="@drawable/view_left_select"
            android:text="排行榜"/>
        <Button 
            android:id="@+id/btn_record"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:text="我的战绩"
            android:layout_height="@dimen/widget_height_35"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@drawable/text_color_white_black"
            android:background="@drawable/view_right_select"/>
    </LinearLayout>
    
	<android.support.v4.view.ViewPager
	    android:id="@+id/container"
	    android:layout_width="match_parent"
	    android:layout_height="0dip"
	    android:layout_weight="1"
	    android:background="@color/text_color_white"
	    android:clipChildren="false" >
	</android.support.v4.view.ViewPager>
</LinearLayout>
