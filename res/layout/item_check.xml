<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
     xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:minHeight="80dip"
     android:gravity="center"
     android:background="@color/text_color_white"
    android:orientation="vertical">
  	 
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
       	android:padding="@dimen/margin_5"
        android:orientation="horizontal">
        <LinearLayout 
            android:layout_width="0dip"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView 
            android:id="@+id/tv_time"
            android:padding="@dimen/margin_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_color_9"/>
        <TextView 
            android:id="@+id/tv_detail"
            android:layout_marginBottom="@dimen/margin_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/text_color_3"/>
        </LinearLayout>
        <View 
            android:visibility="gone"
            android:layout_width="@dimen/line_height"
            android:layout_height="wrap_content"
            android:background="@color/text_color_9"/>
        <TextView 
            android:id="@+id/tv_change"
            android:layout_width="0dip"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/text_color_3"/>
        <View 
            android:visibility="gone"
            android:layout_width="@dimen/line_height"
            android:layout_height="wrap_content"
            android:background="@color/text_color_9"/>
        <TextView 
            android:id="@+id/tv_current_balance"
            android:layout_width="0dip"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/text_color_3"/>
    </LinearLayout>
    <View 
        android:id="@+id/view_diver"
        android:layout_height="@dimen/activity_login_margin_10"
        android:layout_width="match_parent"
        android:background="@color/text_color_e"/>
 </LinearLayout>