<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingRight="@dimen/activity_login_margin_10"
              android:paddingLeft="@dimen/activity_login_margin_10"
              android:background="@drawable/item_select"
              android:orientation="vertical" >
    <LinearLayout
        android:paddingTop="@dimen/margin_15"
        android:paddingBottom="@dimen/margin_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            >

            <ImageView
                android:id="@+id/iv_notify"
                android:scaleType="center"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pushmessage_notify" />

            <ImageView
                android:id="@+id/iv_type"
                android:visibility="invisible"
                android:layout_toRightOf="@+id/iv_notify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:src="@drawable/pushmessage_notify_red"
                />
        </RelativeLayout>
        <TextView
            android:layout_marginLeft="@dimen/dimen_3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="未来研究所公告"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_color_4"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_small_12"
            android:textColor="@color/text_color_9"
            />

    </LinearLayout>
    <include layout="@layout/view_line"/>
    <TextView
        android:id="@+id/tv_message"
        android:layout_marginLeft="@dimen/margin_15"
        android:paddingTop="@dimen/activity_login_margin_10"
        android:paddingBottom="@dimen/activity_login_margin_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_4"
        android:lineSpacingExtra="2dip"
        android:textSize="@dimen/text_size_normal"/>
</LinearLayout>
