<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/text_color_white"
    android:orientation="horizontal" >
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <View 
            android:layout_width="@dimen/line_height"
            android:layout_height="@dimen/margin_15"
            android:background="@color/text_color_b"/>
        <ImageView 
            android:id="@+id/iv_type"
            android:layout_width="@dimen/text_size_large_28"
            android:layout_height="@dimen/text_size_large_28"
            android:src="@drawable/point_red"
            android:scaleType="fitXY"
            android:padding="8dip"
            />
        <View 
            android:layout_width="@dimen/line_height"
            android:layout_height="match_parent"
            android:background="@color/text_color_b"/>
    </LinearLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
	    <TextView 
	        android:id="@+id/tv_time"
	        android:layout_marginRight="@dimen/activity_login_margin_10"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/text_size_large_28"
	        android:gravity="center_vertical"
	        android:textSize="@dimen/text_size_small"
	        android:textColor="@color/text_color_3"
	        android:layout_marginTop="@dimen/margin_15"/>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="@dimen/widget_height_30"
	        android:gravity="center_vertical"
	        android:layout_marginRight="@dimen/activity_login_margin_10"
	        android:background="@drawable/lazy_bag_back"
	        android:orientation="vertical">
	        <TextView 
	        android:id="@+id/tv_title"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textColor="@color/text_color_3"
	        android:layout_marginTop="@dimen/margin_5"
	        android:layout_marginBottom="@dimen/margin_5"
	        android:textSize="@dimen/text_size_normal"/>
	        <TextView 
	        android:id="@+id/tv_content"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textColor="@color/text_color_3"
	        android:lineSpacingExtra="2dip"
	        android:textSize="@dimen/text_size_small"/>
	    </LinearLayout>
	    
	</LinearLayout>
</LinearLayout>
