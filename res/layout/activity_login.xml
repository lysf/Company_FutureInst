<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@color/text_color_white"
    android:orientation="vertical"
    tools:context=".LoginActivity" >
    <View 
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/text_color_e"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/activity_login_padding"
        >
        

	<AutoCompleteTextView
	    android:id="@+id/et_phoneNumber"
	    android:layout_marginTop="60dip"
	    android:paddingBottom="3dip"
	    android:inputType="phone"
        android:completionThreshold="1"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/widget_height_45"
	    android:hint="@string/login_phone_number"
	    android:textColor="@color/text_color_9"
	    android:background="@null"
	    android:maxLength="13"
	    android:gravity="bottom"
	    android:textSize="@dimen/text_size_normal"/>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/line_height"
	    android:background="@color/text_color_b"/>
	<EditText 
	    android:id="@+id/et_password"
	    android:paddingBottom="3dip"
	    android:inputType="textPassword"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/widget_height_45"
	    android:hint="@string/login_password"
	    android:textColor="@color/text_color_9"
	    android:background="@null"
	    android:gravity="bottom"
	    android:maxLength="16"
	    android:textSize="@dimen/text_size_normal"/>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/line_height"
	    android:background="@color/text_color_b"/>

	<Button
	    android:id="@+id/btn_login"
	    android:layout_marginTop="@dimen/margin_20"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/widget_height_45"
        android:textSize="@dimen/text_size_normal"
	    android:textColor="@color/text_color_white"
	    android:background="@drawable/login_btn_login"
	    android:text="@string/login_login" />
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_marginTop="@dimen/margin_5"
	    android:layout_height="@dimen/widget_height_35"
	    android:orientation="horizontal"
	    >
	    <TextView 
	        android:id="@+id/tv_regist"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:gravity="center"
            android:background="@drawable/ripple_shap"
	        android:textSize="@dimen/text_size_small"
	        android:textColor="@color/login_btn_login"
	        android:text="注册新用户"/>
        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
	    <TextView
	        android:id="@+id/tv_forgetPwd"
            android:background="@drawable/ripple_shap"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:gravity="center"
	        android:textSize="@dimen/text_size_small"
	        android:textColor="@color/login_btn_login"
	        android:text="@string/login_forget_password"/>
	</LinearLayout>
	<LinearLayout 
	    android:visibility="visible"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:gravity="bottom"
	    android:orientation="vertical">
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_marginBottom="@dimen/margin_20"
	        android:gravity="center">
	        <View 
	            android:layout_width="0dip"
	            android:layout_weight="1"
	            android:layout_height="@dimen/line_height"
	            android:background="#a3a3a3"/>
	        <TextView android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="社交账号登录"
	            android:textColor="#a3a3a3"
	            android:textSize="@dimen/text_size_normal"/>
	        <View 
	            android:layout_width="0dip"
	            android:layout_weight="1"
	            android:layout_height="@dimen/line_height"
	            android:background="#a3a3a3"/>
	    </LinearLayout>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:orientation="horizontal">
	        <TextView 
	            android:id="@+id/tv_wechat"
	            android:gravity="center"
	            android:layout_marginRight="@dimen/widget_height_30"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:drawableTop="@drawable/wechat"
	            android:textColor="#a3a3a3"

	            android:text="微信"
	            android:textSize="@dimen/text_size_normal"
	            />
	        <TextView 
	            android:id="@+id/tv_sina"
	            android:layout_marginLeft="@dimen/widget_height_30"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	             android:drawableTop="@drawable/sina"
	              android:textColor="#a3a3a3"
	            android:text="微博"
				android:gravity="center"
	            android:textSize="@dimen/text_size_normal"
	            />
	    </LinearLayout>
	</LinearLayout>
	 </LinearLayout>
</LinearLayout>
