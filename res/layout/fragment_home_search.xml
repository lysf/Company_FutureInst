<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a_hp_1_bg_yuan"
    android:paddingBottom="@dimen/widget_height_45"
    android:orientation="vertical" >
    <ImageView 
        android:id="@+id/iv_search"
        android:padding="@dimen/margin_5"
        android:background="#22fcfdfc"
        android:contentDescription="@string/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/a_sh_1_btn"
        android:scaleType="center"/>

    <GridView
        android:id="@+id/gd_search"
        android:layout_marginTop="@dimen/activity_login_margin_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchMode="columnWidth"
        android:listSelector="@android:color/transparent"
        android:scrollbars="none"
        android:numColumns="2" >
    </GridView>

</LinearLayout>
