<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_steep_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_white"
    android:orientation="vertical" >
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_vertical"
	    android:orientation="horizontal">
	    <Button 
	        android:id="@+id/btn_advance_buy"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="看好"
	        android:alpha="0.3"
	        android:textSize="@dimen/text_size_normal"
	        android:textColor="@color/text_color_white"
	        android:minHeight="@dimen/widget_height_45"
	        android:background="@drawable/btn_buy_back"
	        android:minWidth="90dip"
	        android:layout_marginTop="@dimen/text_size_large_28"
	        android:layout_marginBottom="@dimen/text_size_large_28"
	        android:layout_marginLeft="40dip"
	       />
	    <View 
	        android:layout_weight="1"
	        android:layout_width="0dip"
	        android:layout_height="@dimen/line_height"/>
	     <Button 
	        android:id="@+id/btn_advance_sell"
	        android:minWidth="90dip"
	        android:alpha="0.3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="不看好"
	        android:background="@drawable/btn_sell_back"
	        android:minHeight="@dimen/widget_height_45"
	        android:textSize="@dimen/text_size_normal"
	        android:textColor="@color/text_color_white"
	        android:layout_marginTop="@dimen/text_size_large_28"
	        android:layout_marginBottom="@dimen/text_size_large_28"
	        android:layout_marginRight="40dip"
	       />
	</LinearLayout>
	<TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/buy_tip_1"
        android:gravity="center_vertical"
        android:minHeight="@dimen/widget_height_35"
        android:textColor="@color/text_color_9"
        android:textSize="@dimen/text_size_small"/>
</LinearLayout>
