<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_select"
    android:orientation="vertical" >
    <TextView 
        android:id="@+id/tv_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_login_margin_10"
        android:paddingRight="@dimen/activity_login_margin_10"
        android:paddingTop="@dimen/margin_5"
        android:paddingBottom="@dimen/margin_5"
        android:text="此预测于2015-6-29 18:16:16清算盈亏"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/text_color_9"/>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_gravity="center_vertical"
	    android:paddingLeft="@dimen/activity_login_margin_10"
	    android:paddingRight="@dimen/activity_login_margin_10"
	    android:paddingTop="@dimen/margin_5"
	    android:paddingBottom="@dimen/margin_5"
	    android:layout_marginBottom="0.3dip">
	    <LinearLayout 
	        android:layout_width="wrap_content"
	        android:gravity="center"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
	       		<TextView 
	       		    android:id="@+id/tv_deal"
	       		    android:visibility="gone"
	       		    android:layout_width="match_parent" 
	       		    android:layout_height="wrap_content"
	       		    android:textColor="@color/text_color_9"
	       		    android:textSize="@dimen/text_size_normal"
	       		    android:layout_marginBottom="@dimen/margin_5"
	       		    android:text="清算价"/>
	            <TextView 
	                android:id="@+id/tv_price"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:textColor="@color/text_color_3"
	                android:textSize="30sp"
	                android:minEms="3"
	                android:text="670.50"/>
	           
	        <TextView 
	            android:id="@+id/tv_gain"
	            android:layout_marginTop="@dimen/margin_5"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:text="最新成交价"
	            android:textColor="@color/text_color_3"
	            android:textSize="@dimen/text_size_normal"/>
	    </LinearLayout>
	    <View 
	        android:layout_width="@dimen/line_height"
	        android:layout_height="match_parent"
	        android:background="@color/text_color_e"
	        android:layout_marginRight="@dimen/margin_5"/>
	    <LinearLayout 
	        android:layout_width="0dip"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
	        <TextView 
	            android:id="@+id/tv_title"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/text_size_normal"
	            android:textColor="@color/text_color_0"
	            android:text="NBA总冠军休斯顿火箭"
	            android:maxLines="2"/>
	        <TextView 
	            android:id="@+id/tv_hold_buy"
	            android:layout_marginTop="@dimen/margin_5"
	            android:layout_marginBottom="@dimen/margin_5"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/text_size_normal"
	            android:textColor="@color/gain_red"
	            android:text="你看好        100份      以60.5  "
	            />
	        <TextView 
	            android:id="@+id/tv_hold_sell"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textSize="@dimen/text_size_normal"
	            android:textColor="@color/text_blue"
	            android:text="又不看好      30份      以45.5  "
	            />
	    </LinearLayout>
	</LinearLayout>
	<TextView 
	    android:id="@+id/tv_think"
	    android:visibility="gone"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="right"
	    android:background="@color/hold_back"
	    android:paddingTop="@dimen/margin_5"
	    android:paddingBottom="@dimen/margin_5"
	    android:paddingRight="@dimen/activity_login_margin_10"
	    android:textSize="@dimen/text_size_small"
	    android:textColor="@color/hold_status"
	    android:text="下次想好再出价哦"/>
</LinearLayout>
