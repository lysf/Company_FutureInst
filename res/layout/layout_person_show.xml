<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_e"
    android:orientation="vertical" >
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            
            <TableRow
                android:background="@color/text_color_white"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >
				<ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/other_1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/show_assure"
                    android:textColor="@color/text_color_3"
                    android:textSize="@dimen/text_size_normal" 
                    />

                <TextView
                    android:id="@+id/tv_total_assure"
                  	android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/text_color_3"
                    android:layout_marginRight="@dimen/activity_login_margin_10"
                     />
            </TableRow>
            <TableRow
                android:background="@color/text_color_white"
                android:layout_marginTop="@dimen/margin_20"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/other_2"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/ranking"
                    android:textColor="@color/text_color_3"
                    android:textSize="@dimen/text_size_normal" 
                    />

                <TextView
                    android:id="@+id/tv_ranking"
                  	android:gravity="right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/text_color_3"
                    android:layout_marginRight="@dimen/activity_login_margin_10"
                     />
            </TableRow>
            
            
		
            <TableRow
                android:id="@+id/tableRow0"
                android:layout_marginTop="@dimen/margin_20"
                android:background="@drawable/item_select"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="5dp" >
				<ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/other_3"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/show_forecast"
                    android:textColor="@color/text_color_3"
                    android:textSize="@dimen/text_size_normal" />
			<LinearLayout 
				    android:layout_width="wrap_content"
				    android:layout_height="match_parent"
				    android:gravity="right|center_vertical">
				    
                <ImageView
                    android:id="@+id/iv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/more" />
				</LinearLayout>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_marginTop="1dp"
                android:background="@drawable/item_select"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/margin_20"
                android:paddingLeft="10dp"
                android:paddingRight="5dp" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/other_4"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/show_ranking"
                    android:textColor="@color/text_color_3"
                    android:textSize="@dimen/text_size_normal" />
				<LinearLayout 
				    android:layout_width="wrap_content"
				    android:layout_height="match_parent"
				    android:gravity="right|center_vertical">
				    <TextView 
				        android:id="@+id/tv_win"
				        android:layout_width="wrap_content"
				        android:layout_height="match_parent"
				        android:gravity="center_vertical"
				        android:textSize="@dimen/text_size_normal"
				        android:textColor="@color/text_color_3"
				        android:text="0%"/>
                <ImageView
                     android:id="@+id/iv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/more" />
				</LinearLayout>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:visibility="gone"
                android:background="@drawable/item_select"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="5dp" >


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/show_comment"
                    android:textColor="@color/text_color_3"
                    android:textSize="@dimen/text_size_normal" />
				<LinearLayout 
				    android:layout_width="wrap_content"
				    android:layout_height="match_parent"
				    android:gravity="right|center_vertical"
				    android:orientation="horizontal">
				    <TextView
                    android:id="@+id/tv_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/text_color_3"
                    android:text="132"
                    android:layout_marginRight="@dimen/margin_5"
                     />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/more" />
				</LinearLayout>
            </TableRow>
			<TableRow
                android:id="@+id/tableRow4"
                android:layout_marginTop="1dp"
                android:background="@drawable/item_select"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="5dp" >
				<ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/other_6"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/show_attend"
                    android:textColor="@color/text_color_3"
                    android:textSize="@dimen/text_size_normal" />

                <LinearLayout 
				    android:layout_width="150dp"
				    android:gravity="right|center_vertical"
				    android:layout_height="match_parent"
				    android:orientation="horizontal">
				    <TextView
                    android:id="@+id/tv_attend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/text_color_3"
                    android:text="0"
                    android:layout_marginRight="@dimen/margin_5"
                     />
                <ImageView
                     android:id="@+id/iv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/more" />
				</LinearLayout>
            </TableRow>
            <TableRow
                android:id="@+id/tableRow3"
                android:layout_marginTop="1dp"
                android:background="@drawable/item_select"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:paddingRight="5dp" >

				<ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/other_5"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="8dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="@string/show_attention"
                    android:textColor="@color/text_color_3"
                    android:textSize="@dimen/text_size_normal" />

                <LinearLayout 
				    android:layout_width="wrap_content"
				    android:layout_height="match_parent"
				    android:gravity="right|center_vertical"
				    android:orientation="horizontal">
				    <TextView
                    android:id="@+id/tv_attention"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/text_color_3"
                    android:text="0"
                    android:layout_marginRight="@dimen/margin_5"
                     />
                <ImageView
                     android:id="@+id/iv_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/more" />
				</LinearLayout>
            </TableRow>
            
            
            
        </TableLayout>
        <LinearLayout 
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/widget_height_30"
            android:paddingBottom="@dimen/widget_height_30"
            android:orientation="vertical"
            android:gravity="center">
            <Button 
	    android:id="@+id/btn_attention"
	    android:layout_width="match_parent"
	    android:layout_height="@dimen/widget_height_40"
	    android:textSize="@dimen/text_size_large"
	    android:textColor="@color/text_color_white"
	    android:layout_marginLeft="@dimen/widget_height_30"
	    android:layout_marginRight="@dimen/widget_height_30"
	    android:background="@drawable/btn_sell_back"
	    android:text="+ 关注"/>
        </LinearLayout>
	
</LinearLayout>
