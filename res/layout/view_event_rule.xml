<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_margin="@dimen/margin_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/view_shap">
    <RelativeLayout 
        android:paddingLeft="@dimen/margin_15"
        android:paddingRight="@dimen/margin_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/widget_height_45">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="清算依据"
            android:textSize="@dimen/text_size_large"
            android:textColor="@color/text_color_0"/>
        <ImageView 
            android:visibility="gone"
            android:id="@+id/iv_event_rule_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_cancel"
            android:layout_alignParentRight="true"
            android:minHeight="@dimen/widget_height_45"
            android:minWidth="@dimen/widget_height_45"/>
    </RelativeLayout>
    <TextView 
        android:id="@+id/tv_rule"
        android:paddingLeft="@dimen/margin_15"
        android:paddingRight="@dimen/margin_15"
        android:minHeight="100dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="2dip"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/text_color_6"/>
    <View 
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/text_color_e"/>
    <Button 
        android:id="@+id/btn_submit"
        android:layout_marginLeft="@dimen/activity_login_margin_10"
        android:layout_marginRight="@dimen/activity_login_margin_10"
        android:layout_width="match_parent"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_height="@dimen/widget_height_40"
        android:background="@drawable/item_select"
        android:textSize="@dimen/text_size_large"
        android:text="@string/ok"
        android:textColor="#4597FF"/>
	</LinearLayout>
</LinearLayout>
