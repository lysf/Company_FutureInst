<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_white"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/tableRow0"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView 
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="@color/gain_red"
                android:text="买进"
                
                android:textSize="@dimen/text_size_small"/>
            <ImageView 
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/a_hp_1_icon_02"/>
            <TextView 
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="@color/gain_blue"
                android:text="卖空"
                android:textSize="@dimen/text_size_small"/>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
             <TextView 
                 android:id="@+id/tv_buy_1"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="--"
                android:layout_height="wrap_content"
                android:textColor="@color/gain_red"
                android:textSize="@dimen/text_size_small"/>
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/a_hp_1_icon_02"/>
            <TextView 
                android:id="@+id/tv_sell_1"
                android:layout_width="0dip"
                android:layout_weight="1"
                 android:text="--"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="@color/gain_blue"
                android:textSize="@dimen/text_size_small"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow2"
            android:gravity="center"
            android:minHeight="@dimen/widget_height_35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
             <TextView 
                 android:id="@+id/tv_buy_2"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="center"
                 android:text="--"
                android:layout_height="wrap_content"
                android:textColor="@color/gain_red"
                android:textSize="@dimen/text_size_small"/>
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/a_hp_1_icon_02"/>
            <TextView 
                android:id="@+id/tv_sell_2"
                 android:text="--"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="@color/gain_blue"
                android:textSize="@dimen/text_size_small"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow3"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
             <TextView 
                 android:id="@+id/tv_buy_3"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="@color/gain_red"
                 android:text="--"
                android:textSize="@dimen/text_size_small"/>
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/a_hp_1_icon_02"/>
            <TextView 
                android:id="@+id/tv_sell_3"
                 android:text="--"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="@color/gain_blue"
                android:textSize="@dimen/text_size_small"/>
        </TableRow>

        
    </TableLayout>

</LinearLayout>
