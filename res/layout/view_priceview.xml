<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:background="#f2f2f2"
    android:orientation="vertical" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         >

        <TableRow
            android:id="@+id/tableRow0"
            android:gravity="center"
            android:paddingTop="@dimen/activity_login_margin_10"
            android:paddingBottom="@dimen/margin_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <LinearLayout 
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button 
                    android:id="@+id/btn_lood_good"
                    android:layout_width="100dip"
                    android:layout_height="@dimen/widget_height_40"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/text_size_normal"
                    android:background="@drawable/btn_buy_back"
                    android:text="看好"/>
            </LinearLayout>
            <ImageView 
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/a_hp_1_icon_02"/>
           <LinearLayout 
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button 
                    android:id="@+id/btn_lood_bad"
                    android:layout_width="100dip"
                    android:layout_height="@dimen/widget_height_40"
                    android:textColor="@color/text_color_white"
                    android:textSize="@dimen/text_size_normal"
                    android:background="@drawable/btn_sell_back"
                    android:text="不看好"/>
            </LinearLayout>
        </TableRow>

        <TableRow
            android:id="@+id/tableRow1"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
             <TextView 
                 android:id="@+id/tv_buy_1"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:text="--"
                android:layout_height="wrap_content"
                android:textColor="@color/gain_red"
                android:textSize="@dimen/text_size_small"/>
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon"/>
            <TextView 
                android:id="@+id/tv_sell_1"
                android:layout_width="0dip"
                android:layout_weight="1"
                 android:text="--"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="@color/gain_blue"
                android:textSize="@dimen/text_size_small"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow2"
            android:gravity="center"
            android:minHeight="@dimen/widget_height_35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
             <TextView 
                 android:id="@+id/tv_buy_2"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="center"
                 android:text="--"
                android:layout_height="wrap_content"
                android:textColor="@color/gain_red"
                android:textSize="@dimen/text_size_small"/>
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon"/>
            <TextView 
                android:id="@+id/tv_sell_2"
                 android:text="--"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="@color/gain_blue"
                android:textSize="@dimen/text_size_small"/>
        </TableRow>
        <TableRow
            android:id="@+id/tableRow3"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
             <TextView 
                 android:id="@+id/tv_buy_3"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="@color/gain_red"
                 android:text="--"
                android:textSize="@dimen/text_size_small"/>
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon"/>
            <TextView 
                android:id="@+id/tv_sell_3"
                 android:text="--"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="@color/gain_blue"
                android:textSize="@dimen/text_size_small"/>
        </TableRow>
	
         <TableRow
            android:id="@+id/tableRow4"
            android:gravity="center"
            android:paddingLeft="@dimen/margin_15"
            android:paddingRight="@dimen/margin_15"
            android:layout_marginTop="@dimen/line_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
           <LinearLayout 
               android:layout_width="0dip"
               android:layout_weight="1"
               android:layout_height="wrap_content">
               <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="若事件发生则"
        android:gravity="center_vertical"
        android:minHeight="@dimen/widget_height_35"
        android:textColor="@color/text_color_9"
        android:textSize="@dimen/text_size_small"/>
	    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="看好"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_marginRight="@dimen/margin_5"
        android:gravity="center_vertical"
        android:minHeight="@dimen/widget_height_35"
        android:textColor="@color/gain_red"
        android:textSize="@dimen/text_size_small"/>
	    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="盈利"
        android:gravity="center_vertical"
        android:minHeight="@dimen/widget_height_35"
        android:textColor="@color/text_color_9"
        android:textSize="@dimen/text_size_small"/>
           </LinearLayout>
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                android:src="@drawable/a_hp_1_icon_02"/>
            <LinearLayout 
               android:layout_width="0dip"
               android:layout_weight="1"
               android:gravity="right"
               android:layout_height="wrap_content">
               <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="事件不发生则"
        android:gravity="center_vertical"
        android:minHeight="@dimen/widget_height_35"
        android:textColor="@color/text_color_9"
        android:textSize="@dimen/text_size_small"/>
	    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_5"
        android:layout_marginRight="@dimen/margin_5"
        android:text="不看好"
        android:gravity="center_vertical"
        android:minHeight="@dimen/widget_height_35"
        android:textColor="@color/gain_blue"
        android:textSize="@dimen/text_size_small"/>
	    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="盈利"
        android:gravity="center_vertical"
        android:minHeight="@dimen/widget_height_35"
        android:textColor="@color/text_color_9"
        android:textSize="@dimen/text_size_small"/>
           </LinearLayout>
        </TableRow>
    </TableLayout>

</LinearLayout>
