<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:text="常规任务"
        android:background="@color/text_color_white"
        android:textColor="@color/text_color_4"
        android:textSize="@dimen/text_size_large_17"
        android:paddingLeft="@dimen/margin_20"
        android:paddingRight="@dimen/margin_20"
        android:paddingTop="@dimen/activity_login_margin_10"
        android:paddingBottom="@dimen/activity_login_margin_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/ll_task_3"
        android:paddingLeft="@dimen/margin_20"
        android:paddingRight="@dimen/margin_20"
        android:background="@drawable/item_select"
        android:paddingTop="@dimen/activity_login_margin_10"
        android:paddingBottom="@dimen/activity_login_margin_10"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_check_box_normal_1"
            android:layout_marginRight="@dimen/margin_20"
            android:src="@drawable/today_task_check_clickable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_normal_1"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@drawable/today_task_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开启未来研究所"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/iv_check_box_am"
                android:layout_toEndOf="@+id/iv_check_box_am"
                />
            <TextView
                android:id="@+id/tv_normal_1_icon"
                android:layout_marginTop="@dimen/margin_5"
                android:textSize="@dimen/text_size_small"
                android:textColor="@drawable/today_task_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+50未币"
                android:layout_toRightOf="@+id/iv_check_box_am"
                android:layout_below="@+id/tv_am"
                android:layout_toEndOf="@+id/iv_check_box_am"
                />
        </LinearLayout>
        <LinearLayout
            android:gravity="bottom|right"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_normal_1_progress"
                android:text="1/1"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/dimen_3"
                android:textSize="@dimen/text_size_small"
                android:textColor="@drawable/today_task_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_normal_1_status"
                android:text="点击领取"
                android:textSize="@dimen/text_size_small"
                android:textColor="@drawable/today_task_text"
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_task_4"
        android:layout_marginTop="@dimen/line_height"
        android:paddingLeft="@dimen/margin_20"
        android:paddingRight="@dimen/margin_20"
        android:background="@drawable/item_select"
        android:paddingTop="@dimen/activity_login_margin_10"
        android:paddingBottom="@dimen/activity_login_margin_10"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_check_box_normal_2"
            android:layout_marginRight="@dimen/margin_20"
            android:src="@drawable/today_task_check_clickable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_normal_2"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@drawable/today_task_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成两次交易"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/iv_check_box_am"
                android:layout_toEndOf="@+id/iv_check_box_am"
                />
            <TextView
                android:id="@+id/tv_normal_2_icon"
                android:layout_marginTop="@dimen/margin_5"
                android:textSize="@dimen/text_size_small"
                android:textColor="@drawable/today_task_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+100未币"
                android:layout_toRightOf="@+id/iv_check_box_am"
                android:layout_below="@+id/tv_am"
                android:layout_toEndOf="@+id/iv_check_box_am"
                />
        </LinearLayout>
        <LinearLayout
            android:gravity="bottom|right"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_normal_2_progress"
                android:text="0/2"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/dimen_3"
                android:textSize="@dimen/text_size_small"
                android:textColor="@drawable/today_task_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_normal_2_status"
                android:visibility="visible"
                android:text="点击领取"
                android:textSize="@dimen/text_size_small"
                android:textColor="@drawable/today_task_text"
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_task_5"
        android:layout_marginTop="@dimen/line_height"
        android:paddingLeft="@dimen/margin_20"
        android:paddingRight="@dimen/margin_20"
        android:background="@drawable/item_select"
        android:paddingTop="@dimen/activity_login_margin_10"
        android:paddingBottom="@dimen/activity_login_margin_10"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_check_box_normal_3"
            android:layout_marginRight="@dimen/margin_20"
            android:src="@drawable/today_task_check_clickable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_normal_3"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@drawable/today_task_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="写两条评论"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/iv_check_box_am"
                android:layout_toEndOf="@+id/iv_check_box_am"
                />
            <TextView
                android:id="@+id/tv_normal_3_icon"
                android:layout_marginTop="@dimen/margin_5"
                android:textSize="@dimen/text_size_small"
                android:textColor="@drawable/today_task_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+50未币"
                android:layout_toRightOf="@+id/iv_check_box_am"
                android:layout_below="@+id/tv_am"
                android:layout_toEndOf="@+id/iv_check_box_am"
                />
        </LinearLayout>
        <LinearLayout
            android:gravity="bottom|right"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_normal_3_progress"
                android:visibility="gone"
                android:text="0/2"
                android:layout_marginBottom="@dimen/dimen_3"
                android:textSize="@dimen/text_size_small"
                android:textColor="@drawable/today_task_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_normal_3_status"
                android:visibility="visible"
                android:text="点击领取"
                android:textSize="@dimen/text_size_small"
                android:textColor="@drawable/today_task_text"
                android:gravity="bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>