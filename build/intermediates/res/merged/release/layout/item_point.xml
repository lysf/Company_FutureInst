<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_select"
        android:orientation="vertical"
        android:paddingBottom="7dp"
        android:paddingLeft="@dimen/activity_login_margin_10"
        android:paddingRight="@dimen/activity_login_margin_10"
        android:paddingTop="7dp">

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shap_trasp_black_bg"
            android:text="财经"
            android:textColor="@color/text_color_4"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:text="这里是文章标题"
            android:textColor="@color/text_color_4"
            android:textSize="@dimen/text_size_large" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingBottom="@dimen/margin_5"
            android:paddingTop="@dimen/margin_5">

            <com.futureinst.roundimageutils.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/headImage_select"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginRight="3dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logo"
                app:corner_radius="8dip"
                app:mutate_background="true"
                app:oval="true" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/headImage_select"
                android:text="nickname"
                android:textColor="@color/text_color_4"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_toEndOf="@+id/headImage_select"
                android:layout_toRightOf="@+id/headImage_select"
                android:text="2分钟前"
                android:textColor="@color/text_color_9"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/tv_read"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/tv_time"
                android:layout_marginLeft="@dimen/activity_login_margin_10"
                android:layout_toEndOf="@+id/tv_time"
                android:layout_toRightOf="@+id/tv_time"
                android:text="59人阅读"
                android:textColor="@color/text_color_9"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/tv_comment_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/tv_read"
                android:drawableLeft="@drawable/iv_comment_num"
                android:gravity="center_vertical"
                android:text=" 23"
                android:textColor="@color/text_color_9"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/tv_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/tv_comment_num"
                android:layout_marginEnd="21dp"
                android:layout_marginRight="@dimen/margin_20"
                android:layout_toLeftOf="@+id/tv_comment_num"
                android:layout_toStartOf="@+id/tv_comment_num"
                android:drawableLeft="@drawable/iv_item_prise"
                android:gravity="center_vertical"
                android:text=" 30"
                android:textColor="@color/text_color_9"
                android:textSize="@dimen/text_size_small" />
        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_5"
        android:background="@color/text_color_e" />
</LinearLayout><!-- From: file:/F:/CompanyWork/FutureInst/res/layout/item_point.xml -->