<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_e"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
    <LinearLayout
        android:paddingLeft="@dimen/widget_height_55"
        android:paddingRight="@dimen/widget_height_55"
        android:layout_marginTop="@dimen/line_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_color_white"
        android:orientation="horizontal">
        <LinearLayout 
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button 
            android:id="@+id/btn_deal"
            android:layout_width="match_parent"
            android:textSize="@dimen/text_size_normal"
             android:text="@string/hold_deal"
            android:background="@null"
            android:textColor="@color/text_color_3"
            android:layout_height="@dimen/widget_height_45"/>
            <View 
                android:id="@+id/view0"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_3"
                android:layout_marginLeft="@dimen/margin_5"
		        android:layout_marginRight="@dimen/margin_5"
		        android:background="@drawable/forecast_botom_line"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button 
            android:id="@+id/btn_undeal"
            android:layout_width="match_parent"
            android:textSize="@dimen/text_size_normal"
           	android:text="@string/hold_undeal"
            android:background="@null"
            android:textColor="@color/text_color_3"
            android:layout_height="@dimen/widget_height_45"/>
            
            <View 
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_3"
                android:layout_marginLeft="@dimen/margin_5"
		        android:layout_marginRight="@dimen/margin_5"
		        android:background="@drawable/forecast_botom_line"/>
        </LinearLayout>
    </LinearLayout>
    <View 
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/line_height"
		    android:background="@color/text_color_e"/>
