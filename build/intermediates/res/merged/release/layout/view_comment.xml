<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/text_color_white"
    android:orientation="horizontal" >
    <View 
        android:id="@+id/view_1"
        android:layout_width="@dimen/margin_5"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/line_height"
        android:background="@color/gain_red"/>
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        >
        <LinearLayout 
            android:id="@+id/ll_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_login_margin_10"
        android:paddingLeft="@dimen/activity_login_margin_10"
        android:paddingRight="@dimen/activity_login_margin_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <com.futureinst.roundimageutils.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:visibility="visible"
                    android:id="@+id/headImage"
                    android:layout_width="@dimen/widget_height_35"
                    android:layout_height="@dimen/widget_height_35"
                    android:layout_marginRight="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo"
                    app:corner_radius="8dip"
                    app:mutate_background="true"
                    app:oval="true" />
            <TextView 
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/comment_text_0"
                android:textColorHint="@color/comment_text_0"
                android:hint="用户昵称"
                />
        </LinearLayout>
         <TextView 
                android:id="@+id/tv_comment"
                android:layout_below="@+id/ll_1"
             	android:paddingTop="@dimen/activity_login_margin_10"
        		android:paddingLeft="@dimen/activity_login_margin_10"
       			android:paddingRight="@dimen/activity_login_margin_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_normal"
                android:lineSpacingExtra="3dip"
                android:textColor="@color/text_color_6"/>
        
         
             <TextView 
                 android:id="@+id/tv_time"
                  android:layout_marginLeft="@dimen/activity_login_margin_10"
                  android:layout_marginBottom="@dimen/margin_5"
                 android:layout_below="@+id/tv_comment"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="@dimen/text_size_small"
                 android:textColor="@color/text_color_b"
                 android:text="10分钟"/>
             <TextView 
                 android:id="@+id/tv_prise"
                 android:visibility="gone"
                  android:layout_marginRight="@dimen/activity_login_margin_10"
                 android:layout_below="@+id/tv_comment"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:minWidth="@dimen/margin_20"
                 android:textSize="@dimen/text_size_small"
                 android:textColor="@color/comment_text_1"
                 android:layout_alignParentRight="true"
                 />
             <TextView 
                 android:id="@+id/tv_prise_add"
                  android:layout_below="@+id/tv_comment"
                  android:layout_marginRight="@dimen/activity_login_margin_10"
                 android:visibility="gone"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textSize="@dimen/text_size_small"
                 android:textColor="@color/comment_text_1"
                 android:layout_alignParentRight="true"
                 android:text="+1"
                 />
             <ImageView 
                 android:id="@+id/iv_prise"
                 android:visibility="gone"
                  android:layout_below="@+id/tv_comment"
                 android:layout_marginRight="2dip"
                 android:layout_toLeftOf="@+id/tv_prise"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:src="@drawable/comment_prise"/>
         
         <View 
             android:id="@+id/view_2"
             android:layout_below="@+id/tv_time"
             android:layout_marginRight="@dimen/activity_login_margin_10"
             android:layout_width="match_parent"
             android:layout_height="@dimen/line_height"
             android:background="@color/gain_red"/>
    </RelativeLayout>
	
</LinearLayout>
