<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_e"
    android:gravity="center_horizontal"
    android:orientation="vertical" >
   <LinearLayout 
       android:background="@color/text_color_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:gravity="center"
        android:orientation="horizontal">
       <LinearLayout
           android:layout_width="80dp"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <Button
               android:id="@+id/btn_attitude"
               android:layout_width="match_parent"
               android:text="观点"
               android:layout_height="@dimen/widget_height_45"
               android:textSize="@dimen/text_size_large"
               android:textColor="@drawable/text_color_fond"
               android:background="@color/text_color_white"/>
           <View
               android:id="@+id/view1"
               android:layout_width="match_parent"
               android:layout_height="@dimen/dimen_3"
               android:layout_marginLeft="@dimen/margin_5"
               android:layout_marginRight="@dimen/margin_5"
               android:background="@drawable/forecast_botom_line"/>
       </LinearLayout>

        <LinearLayout 
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button 
            android:id="@+id/btn_trends"
            android:layout_width="match_parent"
            android:text="动态"
            android:layout_height="@dimen/widget_height_45"
            android:textSize="@dimen/text_size_large"
            android:textColor="@drawable/text_color_fond"
            android:background="@color/text_color_white"/>
            <View 
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_3"
                android:layout_marginLeft="@dimen/margin_5"
		        android:layout_marginRight="@dimen/margin_5"
		        android:background="@drawable/forecast_botom_line"/>
        </LinearLayout>

       <LinearLayout
           android:layout_width="80dp"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <Button
               android:id="@+id/btn_ranking"
               android:layout_width="match_parent"
               android:layout_height="@dimen/widget_height_45"
               android:textSize="@dimen/text_size_large"
               android:textColor="@drawable/text_color_fond"
               android:background="@color/text_color_white"
               android:text="排行"/>
           <View
               android:id="@+id/view3"
               android:layout_width="match_parent"
               android:layout_height="@dimen/dimen_3"
               android:layout_marginLeft="@dimen/margin_5"
               android:layout_marginRight="@dimen/margin_5"
               android:background="@drawable/forecast_botom_line"/>
       </LinearLayout>
    </LinearLayout>
    <View 
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/line_height"
		    android:background="@color/text_color_e"/>
	<android.support.v4.view.ViewPager
	    android:id="@+id/container"
	    android:layout_width="match_parent"
	    android:layout_height="0dip"
	    android:layout_weight="1"
	    android:background="@color/text_color_white"
	    android:clipChildren="false" >
	</android.support.v4.view.ViewPager>
</LinearLayout>
