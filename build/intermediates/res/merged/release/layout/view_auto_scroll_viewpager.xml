<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <com.futureinst.widget.autoviewpager.AutoScrollViewPager
            android:id="@+id/auto_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/image_top_default"
            />

        <com.futureinst.viewpagerindicator.CirclePageIndicator
            android:id="@+id/top_pager_indicator"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:padding="@dimen/activity_login_margin_10"
            android:layout_marginRight="@dimen/margin_20"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:fillColor="#ffd311"
            app:pageColor="#ffffff"
            app:strokeWidth="0.0dip"
            />
    </RelativeLayout>
