<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_select"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_height_40"
        android:gravity="center_vertical"
        android:orientation="horizontal">
            <TextView 
            android:id="@+id/tv_type"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_color_3"
            android:text="分类"/>
        
        <TextView 
            android:id="@+id/tv_gainTotal"
            android:layout_width="0dip"
            android:layout_weight="1.5"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_color_3"
            android:text="5400"/>
        <TextView 
            android:id="@+id/tv_avgGain"
            android:layout_width="0dip"
            android:layout_weight="1.3"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_color_3"
            android:text="310"/>
        <TextView 
            android:id="@+id/tv_gainNumber"
            android:layout_width="0dip"
            android:layout_weight="1.3"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_color_3"
            android:text="78"/>
        <TextView 
            android:id="@+id/tv_odds"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_color_3"
            android:text="62%"/>
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_login_margin_10"
            android:src="@drawable/right_arrow"/>
    </LinearLayout>

</LinearLayout>
