<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_margin="@dimen/margin_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/view_shap">
    <TextView 
        android:id="@+id/tv_message"
        android:paddingLeft="@dimen/margin_15"
        android:paddingRight="@dimen/margin_15"
        android:minHeight="80dip"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="2dip"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/text_color_6"/>
    <View 
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/text_color_e"/>
    <Button 
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/activity_login_margin_10"
        android:layout_marginRight="@dimen/activity_login_margin_10"
        android:layout_height="@dimen/widget_height_40"
        android:background="@drawable/item_select"
        android:textSize="@dimen/text_size_large"
        style="?android:attr/borderlessButtonStyle"
        android:text="@string/ok"
        android:textColor="#4597FF"/>
	</LinearLayout>
</LinearLayout>
