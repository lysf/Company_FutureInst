<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_margin="@dimen/margin_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/view_shap">
        
        <TextView 
            android:id="@+id/tv_configMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="80dip"
            android:textColor="@color/text_color_6"
            android:textSize="@dimen/text_size_large"
            android:paddingTop="@dimen/margin_20"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_20"
            />
        <View 
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/text_color_e"/>
        
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_height_45"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/margin_5"
            android:gravity="center">
            <Button 
                android:id="@+id/btn_cancel"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="@string/cancel"
                android:background="@drawable/item_select"
                android:textColor="#86BCFF"
                android:textSize="@dimen/text_size_large"/>
            <View 
            android:layout_width="@dimen/line_height"
            android:layout_height="match_parent"
            android:background="@color/text_color_e"/>
             <Button 
            android:id="@+id/btn_submit"
            android:layout_width="0dip"
                android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="@dimen/text_size_large"
            android:textColor="#86BCFF"
            android:background="@drawable/item_select"
            android:text="@string/ok"
            />
        </LinearLayout>
        
       
    </LinearLayout>

</LinearLayout>
