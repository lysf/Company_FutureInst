<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/activity_login_margin_10"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_9"
        android:textSize="@dimen/text_size_small"
        android:text="大家认为"/>
    <TextView
        android:id="@+id/tv_price"
        android:layout_marginLeft="@dimen/dimen_3"
        android:layout_marginRight="@dimen/dimen_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/text_color_3"
        android:text="29.5"/>
    <ImageView
        android:id="@+id/iv_attitude"
        android:layout_marginLeft="@dimen/dimen_3"
        android:layout_marginRight="@dimen/dimen_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/iv_up"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_9"
        android:textSize="@dimen/text_size_small"
        android:text="会发生"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right">
        <ImageView
            android:layout_marginLeft="@dimen/dimen_3"
            android:layout_marginRight="@dimen/dimen_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iv_order_num"/>
        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_color_9"
            android:text="下单"/>
        <TextView
            android:id="@+id/tv_orderNum"
            android:layout_marginLeft="@dimen/dimen_3"
            android:layout_marginRight="@dimen/dimen_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_color_9"
            android:text="0"
            />

        <ImageView
            android:layout_marginLeft="@dimen/activity_login_margin_10"
            android:layout_marginRight="@dimen/dimen_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iv_comment_num"/>
        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_color_9"
            android:text="评论"/>
        <TextView
            android:id="@+id/tv_commentNum"
            android:layout_marginLeft="@dimen/dimen_3"
            android:layout_marginRight="@dimen/dimen_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_color_9"
            android:text="0"/>
    </LinearLayout>
</LinearLayout>
