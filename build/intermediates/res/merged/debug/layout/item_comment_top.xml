<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/text_color_white"
    android:orientation="vertical">
    <LinearLayout
        android:paddingTop="@dimen/activity_login_margin_10"
        android:paddingBottom="@dimen/activity_login_margin_10"
        android:paddingLeft="@dimen/margin_20"
        android:paddingRight="@dimen/margin_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.futureinst.roundimageutils.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:visibility="visible"
            android:id="@+id/headImage"
            android:layout_width="@dimen/widget_height_40"
            android:layout_height="@dimen/widget_height_40"
            android:layout_marginRight="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo"
            app:corner_radius="8dip"
            app:mutate_background="true"
            app:oval="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_name"
                    android:textSize="@dimen/text_size_normal"
                    android:textColor="@color/text_color_4"
                    android:text="ndaghfdgad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_attitude"
                    android:layout_toRightOf="@+id/tv_name"
                    android:background="@drawable/shap_back_bad"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/text_size_small"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_login_margin_10"
                    android:text="看好"
                    />
                <LinearLayout
                    android:id="@+id/ll_agree"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_comment_num"
                        android:layout_marginRight="@dimen/margin_5"
                        android:layout_toLeftOf="@+id/iv_agree"
                        android:layout_width="wrap_content"
                        android:textColor="@color/text_color_9"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_normal"
                        android:text="0"/>
                    <ImageView
                        android:id="@+id/iv_agree"
                        android:src="@drawable/praise_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </RelativeLayout>
            <TextView
                android:id="@+id/tv_time"
                android:layout_marginTop="@dimen/line_height"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/text_color_9"
                android:text="5分钟前"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_comment"
                android:background="@drawable/item_select"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginBottom="@dimen/margin_5"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/text_color_4"
                android:lineSpacingExtra="@dimen/line_height"
                android:text="和打法i可换购的海龟可抵扣干活大富大贵发达的股份的风化的碎骨风大大概同仁堂啊东风股份的阿迪的功夫大使馆放大该饭店"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:background="@color/text_color_e"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"/>
</LinearLayout><!-- From: file:/F:/CompanyWork/FutureInst/res/layout/item_comment_top.xml -->