<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@drawable/item_select"
    android:paddingLeft="@dimen/margin_15"
    android:paddingRight="@dimen/margin_20"
    android:minHeight="60dp">
    <TextView
        android:id="@+id/tv_ranking"
        android:layout_width="wrap_content"
        android:text="100"
        android:minWidth="30dp"
        android:gravity="right|center_vertical"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_3"
        android:textSize="@dimen/text_size_normal"/>
    <ImageView
        android:id="@+id/iv_ranking"
        android:contentDescription="@string/app_name"
        android:src="@drawable/iv_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <com.futureinst.roundimageutils.RoundedImageView
        android:id="@+id/iv_headImg"
        android:layout_marginLeft="@dimen/margin_20"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="@dimen/dimen_ranking_image"
        android:layout_height="@dimen/dimen_ranking_image"
        android:scaleType="centerCrop"
        android:src="@drawable/logo"
        app:corner_radius="8dip"
        app:mutate_background="true"
        app:oval="true" />
    <LinearLayout
        android:layout_marginLeft="@dimen/dimen_ranking_image_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_userName"
            android:text="CHO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/text_color_4"
            android:textSize="@dimen/text_size_normal"/>
        <LinearLayout
            android:gravity="center_vertical|right"
            android:layout_marginTop="@dimen/dimen_3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:text="先知指数:"/>
            <TextView
                android:id="@+id/tv_prophet"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_4"
                android:text="1356"
                android:textSize="@dimen/text_size_small"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="right|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_relation"
            android:src="@drawable/relat_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
