<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/text_color_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/item_comment_top"/>

    <LinearLayout
        android:id="@+id/ll_apply"
        android:paddingLeft="@dimen/widget_height_30"
        android:paddingRight="@dimen/margin_20"
        android:paddingTop="@dimen/activity_login_margin_10"
        android:paddingBottom="@dimen/activity_login_margin_10"
        android:background="@drawable/item_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.futureinst.roundimageutils.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:visibility="visible"
            android:id="@+id/headImage_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo"
            app:corner_radius="8dip"
            app:mutate_background="true"
            app:oval="true" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_name_1"
                android:text="CHO已回复"
                android:gravity="center_vertical"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/text_color_4"
                android:layout_width="wrap_content"
                android:layout_height="30dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_time_1"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/text_color_9"
                    android:text="20min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_total_apply"
                    android:textColor="@color/text_color_9"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/text_size_small"
                    android:text="共18条回复"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="@color/text_color_9"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"/>
        <View
            android:background="@color/text_color_e"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_5"/>
    </LinearLayout>
</LinearLayout><!-- From: file:/Users/yanhuihao/AndroidStudioProjects/FutureInst/res/layout/item_comment.xml -->