<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <View
        android:visibility="gone"
        android:layout_width="4dip"
        android:layout_height="match_parent"
        android:background="@color/forecast_bottom_line_select"
        />
    <LinearLayout
        android:paddingLeft="@dimen/margin_20"
        android:paddingRight="@dimen/margin_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_select"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_refrence"
            android:paddingTop="@dimen/activity_login_margin_10"
            android:paddingBottom="@dimen/activity_login_margin_10"
            android:textSize="@dimen/text_size_large"
            android:textColor="#52C3D1"
            android:text="这就是新闻的标题"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
         <TextView 
             android:id="@+id/tv_from"
             android:visibility="gone"
             android:gravity="right"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="@dimen/activity_login_margin_10"
             android:layout_marginBottom="@dimen/margin_5"
             android:textSize="@dimen/text_size_small"
             android:textColor="@color/text_color_6"/>
    </LinearLayout>
</LinearLayout>
