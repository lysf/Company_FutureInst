<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:CustomViewImgText="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/text_color_e"
	android:scrollbars="none"
	android:orientation="vertical">
    <LinearLayout 
        android:id="@+id/ll_add_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
         <TextView 
             android:layout_margin="@dimen/activity_login_margin_10"
			 android:visibility="gone"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textColor="@color/text_color_6"
	        android:textSize="@dimen/text_size_small"
	        android:text="① 选择态度"/>
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:gravity="center"
	    android:background="@color/text_color_white"
		android:paddingTop="@dimen/widget_height_30"
		android:paddingBottom="@dimen/widget_height_30"
	    android:paddingLeft="@dimen/margin_20"
		android:paddingRight="@dimen/margin_20"
	    >
	   
	    <com.futureinst.widget.CustomView_Image_Text
	        android:id="@+id/btn_attention_good"
	        android:layout_width="wrap_content"
	        android:layout_height="@dimen/widget_height_40"
	        android:layout_marginRight="@dimen/margin_20"
			CustomViewImgText:imageSrc="@drawable/look_good"
			CustomViewImgText:text="看好"
			android:background="@drawable/btn_look_good"
			/>
	    <com.futureinst.widget.CustomView_Image_Text
	        android:id="@+id/btn_attention_bad"
	        android:layout_marginLeft="@dimen/margin_20"
	        android:layout_width="wrap_content"
	        android:layout_height="@dimen/widget_height_40"
			CustomViewImgText:imageSrc="@drawable/look_bad"
			CustomViewImgText:text="不看好"
			android:background="@drawable/btn_look_bad"
			/>

	</LinearLayout>
	<View
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/line_height"
	        android:textColor="@color/text_color_e"
	        />
	<EditText 
	    android:id="@+id/et_comment"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:padding="@dimen/margin_5"
	    android:background="@color/text_color_white"
	    android:textSize="@dimen/text_size_normal"
	    android:lineSpacingExtra="2dip"
	    android:hint="在这里写下你的预言和吐槽吧（ 500字以内 ）"
	    android:gravity="top"
	    android:textColorHint="@color/text_color_9"
	    android:textColor="@color/text_color_6"
	    android:maxLength="500"
	    android:focusableInTouchMode="true"
	    />

	</LinearLayout>
</LinearLayout>
