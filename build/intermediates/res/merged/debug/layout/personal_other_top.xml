<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/text_color_e"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_20">
    <LinearLayout
        android:id="@+id/ll_modify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/item_select"
        android:padding="@dimen/activity_login_margin_10" >

        <com.futureinst.roundimageutils.RoundedImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_headImg"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:scaleType="centerCrop"
            android:src="@drawable/logo"
            app:corner_radius="8dip"
            app:mutate_background="true"
            app:oval="true" />


        <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="1"
            android:paddingRight="@dimen/margin_5"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_5"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_userName"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:hint="昵称"
                    android:textColor="@color/text_color_3"
                    android:textSize="@dimen/text_size_large" />

            <Button
                android:id="@+id/btn_attention"
                android:text="取消关注"
                android:textColor="@color/text_color_4"
                android:background="@drawable/shap_trasp_black_bg"
                android:textSize="@dimen/text_size_normal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/widget_height_35" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_5"
                    android:layout_weight="1"
                    android:hint="@string/description_hint"
                    android:paddingBottom="@dimen/margin_5"
                    android:paddingTop="@dimen/margin_5"
                    android:textColor="@color/text_color_3"
                    android:textSize="@dimen/text_size_small" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/text_color_b"
                android:text="上次下单时间：1天前"/>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/view_line"/>
    <include layout="@layout/personal_other_middle"/>
</LinearLayout><!-- From: file:/Users/yanhuihao/AndroidStudioProjects/FutureInst/res/layout/personal_other_top.xml -->