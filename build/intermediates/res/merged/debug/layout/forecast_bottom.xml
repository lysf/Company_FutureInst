<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_white"
    android:orientation="vertical" >
    <LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/widget_height_50"
		    android:orientation="horizontal">
		    <LinearLayout 
		        android:layout_width="0dip"
		        android:layout_weight="1"
		        android:layout_height="match_parent"
		        android:orientation="vertical">
		         <Button 
		        android:id="@+id/btn_comment"
		        android:layout_width="match_parent"
		        android:layout_weight="1"
		        android:layout_height="0dip"
		        android:background="@color/text_color_white"
		         android:textSize="@dimen/text_size_large"
		        android:textColor="@color/text_color_3"
		        android:text="评论"/>
		        <View 
		            android:id="@+id/view1"
		            android:layout_width="match_parent"
		            android:layout_height="3dip"
		            android:layout_marginLeft="@dimen/margin_5"
		            android:layout_marginRight="@dimen/margin_5"
		            android:background="@drawable/forecast_botom_line"/>
		    </LinearLayout>
		    <LinearLayout 
		        android:layout_width="0dip"
		        android:layout_weight="1"
		        android:layout_height="match_parent"
		        android:orientation="vertical">
		        <Button 
		        android:id="@+id/btn_revoke"
		        android:layout_width="match_parent"
		        android:layout_weight="1"
		        android:layout_height="0dip"
		        android:background="@color/text_color_white"
		        android:textSize="@dimen/text_size_large"
		        android:textColor="@color/text_color_3"
		        android:text="事件始末"/>
		       
		        <View 
		            android:id="@+id/view2"
		            android:layout_width="match_parent"
		            android:layout_height="3dip"
		            android:layout_marginLeft="@dimen/margin_5"
		            android:layout_marginRight="@dimen/margin_5"
		            android:background="@drawable/forecast_botom_line"/>
		    </LinearLayout>
		     <LinearLayout 
		        android:layout_width="0dip"
		        android:layout_weight="1"
		        android:layout_height="match_parent"
		        android:orientation="vertical">
		         <Button 
		        android:id="@+id/btn_refrence"
		        android:layout_marginLeft="@dimen/line_height"
		        android:layout_marginRight="@dimen/line_height"
		        android:layout_width="match_parent"
		        android:layout_weight="1"
		        android:layout_height="0dip"
		        android:background="@color/text_color_white"
		         android:textSize="@dimen/text_size_large"
		        android:textColor="@color/text_color_3"
		        android:text="相关新闻"/>
		      
		        <View 
		            android:id="@+id/view3"
		            android:layout_width="match_parent"
		            android:layout_height="3dip"
		            android:layout_marginLeft="@dimen/margin_5"
		            android:layout_marginRight="@dimen/margin_5"
		            android:background="@drawable/forecast_botom_line"/>
		    </LinearLayout>
		    
		</LinearLayout>
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="@dimen/line_height"
		    android:background="#007BFF"/>
		<FrameLayout
		    android:visibility="visible"
		     android:id="@+id/container"
		    android:layout_width="match_parent"
		    android:layout_height="fill_parent"
		   android:minHeight="200dip"
		   android:paddingBottom="180dip"
		   android:orientation="vertical"
		    />
		    
		
		<com.futureinst.widget.CustomViewPager
		    android:visibility="gone"
		   
        android:id="@+id/event_detail_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>
