<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/widget_height_45"
    android:background="@color/text_color_white"
    android:orientation="horizontal" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/dimen_3"
        android:layout_height="@dimen/widget_height_40"
        android:gravity="center_vertical" 
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/tv_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/text_color_6"
           />
        <ImageView 
            android:layout_marginLeft="@dimen/line_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <View 
            android:layout_width="@dimen/line_height"
            android:layout_height="match_parent"
            android:background="@color/text_color_9"
            android:layout_marginLeft="@dimen/dimen_3"
            android:layout_marginRight="@dimen/dimen_3"/>
        <TextView 
            android:id="@+id/tv_right"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/background"
            />
    </LinearLayout>
	<Button 
	    android:id="@+id/btn_revoke"
	    android:layout_width="wrap_content"
	    android:layout_height="match_parent"
	    android:textSize="@dimen/text_size_large"
	    android:textColor="@color/text_color_white"
	    android:background="#F4A11E"
	    android:text="撤单"/>
</LinearLayout>
