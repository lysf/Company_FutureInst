<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:id="@+id/ll_keyword"
              android:orientation="vertical"

              android:background="@drawable/keyword_select_bg"
    >

    <ImageView
        android:id="@+id/iv_check"
        android:layout_marginTop="@dimen/activity_login_margin_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_caijing"
        />

    <TextView
        android:id="@+id/tv_keyword"
        android:paddingTop="@dimen/activity_login_margin_10"
        android:paddingBottom="@dimen/activity_login_margin_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_check"
        android:textColor="@drawable/keyword_select"
        android:gravity="center"
        android:text="新奇"
        android:textSize="@dimen/text_size_large"/>


</LinearLayout>
