<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:layout_height="wrap_content"
    android:minHeight="138px"
    android:background="@drawable/item_select"
    android:paddingTop="@dimen/activity_login_margin_10"
    android:paddingBottom="@dimen/activity_login_margin_10"
    android:paddingLeft="30px"
    android:paddingRight="30px"
    android:orientation="horizontal" xmlns:app="http://schemas.android.com/apk/res/com.futureinst">
    <com.futureinst.roundimageutils.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/iv_headImg"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo"
                    app:corner_radius="8dip"
                    app:border_width="0.5px"
                    app:mutate_background="true"
                    app:oval="true" />
    <LinearLayout 
        android:layout_width="0dip"
        android:layout_weight="1"
        android:paddingLeft="23px"
        android:paddingRight="10px"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView 
            android:id="@+id/tv_nickName"
            android:layout_gravity="top"
            android:layout_marginTop="7px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_0"
            android:textSize="@dimen/text_size_large"
            android:singleLine="true"
            android:text="喵星人"
            />
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_5"
           	android:layout_marginTop="@dimen/margin_5"
           	android:gravity="center_vertical"
            >
            <TextView 
                android:id="@+id/tv_assert"
                android:layout_width="0dip"
                android:layout_weight="1.7"
                android:layout_height="wrap_content"
                 android:textColor="#8d8d8d"
            android:textSize="@dimen/text_size_small"
            android:text="500000.00"
            android:singleLine="true"
            android:drawableLeft="@drawable/other_1_small"
                />
            <TextView 
                android:id="@+id/tv_ranking"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                 android:textColor="#8d8d8d"
            android:textSize="@dimen/text_size_small"
            android:text="5000"
            android:drawableLeft="@drawable/other_2_small"
                />
            <TextView 
                android:id="@+id/tv_gain"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                 android:textColor="#8d8d8d"
            android:textSize="@dimen/text_size_small"
            android:text="79%"
            android:drawableLeft="@drawable/other_3_small"
                />
        </LinearLayout>
        <TextView 
            android:id="@+id/tv_order"
            android:visibility="visible"
           	android:layout_marginTop="@dimen/margin_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#8d8d8d"
            android:textSize="@dimen/text_size_small"
            android:singleLine="true"
            android:text="上次下单时间：1天前"/>
    </LinearLayout>
	<ImageView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:src="@drawable/right_arrow"/>
</LinearLayout>
