<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/text_color_white"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/text_color_a"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:padding="@dimen/activity_login_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_back"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_login_margin_10"
                android:text="昵称:"
                android:textColor="@color/text_color_4"
                android:textSize="@dimen/text_size_normal"/>

            <EditText
                android:id="@+id/et_userName"
                style="@style/BaseEditTextType"
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_height_35"
                android:ems="14"
                android:singleLine="true"/>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:gravity="right"
            android:text="@string/regist_userName_tip"
            android:textColor="@color/text_color_b"
            android:textSize="@dimen/text_size_small"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_login_margin_10"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_login_margin_10"
                android:layout_weight="1"
                android:text="性别:"
                android:textColor="@color/text_color_4"
                android:textSize="@dimen/text_size_normal"/>

            <ImageView
                android:id="@+id/iv_male"
                android:layout_marginRight="@dimen/widget_height_30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/male"/>

            <ImageView
                android:id="@+id/iv_female"
                android:layout_marginRight="@dimen/margin_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/female"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_login_margin_10"
            android:background="@drawable/edit_back">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/activity_login_margin_10"
                android:text="生日:"
                android:textColor="@color/text_color_4"
                android:textSize="@dimen/text_size_normal"/>

            <TextView
                android:id="@+id/tv_birthday"
                style="@style/BaseEditTextType"
                android:layout_width="match_parent"
                android:layout_height="@dimen/widget_height_35"
                />
        </LinearLayout>

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/widget_height_45"
            android:layout_marginTop="@dimen/widget_height_40"
            android:background="@drawable/login_btn_login"
            android:text="@string/next"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text_size_normal"/>


    </LinearLayout>
</LinearLayout>
