<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/text_color_white"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginBottom="@dimen/margin_20"
        android:gravity="right|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView

                android:text="排名"
                android:padding="@dimen/margin_5"
                android:textColor="#52c3d1"
                android:textSize="@dimen/text_size_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_ranking"
                android:padding="@dimen/margin_5"
                android:textColor="#52c3d1"
                android:text="0"
                android:textSize="@dimen/text_size_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_ranking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            android:layout_marginRight="@dimen/activity_login_margin_10"
            android:layout_marginLeft="@dimen/activity_login_margin_10"
            android:layout_width="@dimen/line_height"
            android:layout_height="match_parent"
            android:background="@drawable/line_sort"/>

        <TextView
            android:id="@+id/tv_attend"
            android:textColor="#52c3d1"
            android:text="关注 0"
            android:padding="@dimen/margin_5"
            android:textSize="@dimen/text_size_normal"
            android:background="@drawable/item_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginRight="@dimen/activity_login_margin_10"
            android:layout_marginLeft="@dimen/activity_login_margin_10"
            android:layout_width="@dimen/line_height"
            android:layout_height="match_parent"
            android:background="@drawable/line_sort"/>
        <TextView
            android:id="@+id/tv_follow_add"
            android:layout_marginRight="@dimen/dimen_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minWidth="@dimen/margin_15"
            android:minHeight="@dimen/margin_15"
            android:textColor="@color/text_color_white"
            android:textSize="@dimen/text_size_small"
            android:text="+0"
            android:background="@drawable/point_red"/>
        <TextView
            android:id="@+id/tv_attention"
            android:textColor="#52c3d1"
            android:text="被关注 0"
            android:padding="@dimen/margin_5"
            android:layout_marginRight="@dimen/margin_20"
            android:textSize="@dimen/text_size_normal"
            android:background="@drawable/item_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <include layout="@layout/view_line"/>
    <LinearLayout
        android:paddingBottom="@dimen/margin_5"
        android:paddingTop="@dimen/activity_login_margin_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_useableIcon"
                android:text="0"
                android:singleLine="true"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/text_color_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/text_color_4"
                android:drawableLeft="@drawable/user_1"
                android:text=" 总未币"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginLeft="@dimen/activity_login_margin_10"
            android:layout_marginRight="@dimen/activity_login_margin_10"
            android:background="@color/text_color_e"
            android:layout_width="@dimen/line_height"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_useableSaleIcon"
                android:text="0"
                android:singleLine="true"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/text_color_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/text_color_4"
                android:drawableLeft="@drawable/user_2"
                android:text=" 可消费未币"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:layout_marginLeft="@dimen/activity_login_margin_10"
            android:layout_marginRight="@dimen/activity_login_margin_10"
            android:background="@color/text_color_e"
            android:layout_width="@dimen/line_height"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_depositCash"
                android:text="0"
                android:textSize="@dimen/text_size_large"
                android:singleLine="true"
                android:textColor="@color/text_color_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/text_color_4"
                android:drawableLeft="@drawable/user_3"
                android:text=" 保证金"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout><!-- From: file:/F:/CompanyWork/FutureInst/res/layout/middle_userinfo.xml -->