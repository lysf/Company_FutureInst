<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/activity_login_margin_10"
            >
            <LinearLayout
                android:id="@+id/ll_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/activity_login_margin_10"
                android:paddingLeft="@dimen/activity_login_margin_10"
                android:paddingBottom="@dimen/margin_5"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <com.futureinst.roundimageutils.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:visibility="visible"
                    android:id="@+id/headImage_1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginRight="3dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo"
                    app:corner_radius="8dip"
                    app:mutate_background="true"
                    app:oval="true" />
                <TextView
                    android:id="@+id/tv_name_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/text_color_4"
                    android:hint="用户昵称"
                    />
                <TextView
                    android:id="@+id/tv_status_1"
                    android:layout_marginLeft="@dimen/margin_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/gain_red"
                    android:text="看好"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_comment_1"
                android:layout_below="@+id/ll_1"
                android:paddingLeft="@dimen/activity_login_margin_10"
                android:paddingRight="@dimen/activity_login_margin_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:textSize="@dimen/text_size_small"
                android:maxLines="3"
                android:lineSpacingExtra="3dip"
                android:textColor="@color/text_color_6"/>


            <TextView
                android:id="@+id/tv_time_1"
                android:layout_marginLeft="@dimen/activity_login_margin_10"
                android:layout_marginBottom="@dimen/margin_5"
                android:layout_below="@+id/tv_comment_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/text_color_b"
                android:text="10分钟"/>
            <LinearLayout
                android:layout_below="@+id/tv_comment_1"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_prise_1"
                    android:visibility="visible"
                    android:layout_marginRight="2dip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/iv_item_prise"/>
                <TextView
                    android:id="@+id/tv_prise_1"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="@dimen/margin_20"
                    android:textSize="@dimen/text_size_small"
                    android:layout_marginRight="@dimen/margin_5"
                    android:textColor="@color/text_color_9"
                    android:text="30"
                    />
                <TextView
                    android:id="@+id/tv_prise_add_1"
                    android:layout_marginRight="@dimen/activity_login_margin_10"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_small"
                    android:textColor="@color/comment_text_1"
                    android:layout_alignParentRight="true"
                    android:text="+1"
                    />

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/iv_vs"/>
    </LinearLayout>

    <LinearLayout
