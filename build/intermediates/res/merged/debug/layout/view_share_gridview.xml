<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/text_color_white"
    android:orientation="vertical" >
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_login_margin_10"
        android:paddingRight="@dimen/activity_login_margin_10"
        android:paddingBottom="@dimen/activity_login_margin_10"
        android:paddingTop="@dimen/margin_20"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/tv_sina"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="微博"
            android:drawableTop="@drawable/logo_sinaweibo"
            />
        <TextView 
            android:id="@+id/tv_wechat"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="微信"
            android:drawableTop="@drawable/logo_wechat"
            />
        <TextView 
            android:id="@+id/tv_wechatmoments"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="朋友圈"
            android:drawableTop="@drawable/logo_wechatmoments"
            />
    </LinearLayout>
<TextView 
    android:id="@+id/tv_cancel"
    android:padding="8dip"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:textSize="@dimen/text_size_large"
    android:textColor="@color/text_color_3"
    android:text="@string/cancel"/>
</LinearLayout>
