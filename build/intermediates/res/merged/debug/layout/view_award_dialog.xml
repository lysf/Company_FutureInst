<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.futureinst.roundimageutils.RoundedImageView
        android:id="@+id/headImage"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:visibility="visible"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/logo"
        app:corner_radius="8dip"
        app:mutate_background="true"
        app:oval="true" />
    <LinearLayout
        android:layout_above="@+id/ll_bottom"
        android:layout_marginBottom="@dimen/widget_height_40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/btn_award_1"
            android:src="@drawable/money_10"
            android:layout_marginLeft="@dimen/widget_height_30"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/btn_award_2"
            android:src="@drawable/money_50"
            android:layout_marginLeft="@dimen/widget_height_30"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/btn_award_3"
            android:src="@drawable/money_100"
            android:layout_marginLeft="@dimen/widget_height_30"
            android:layout_marginRight="@dimen/widget_height_30"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
    </LinearLayout>
<LinearLayout
    android:id="@+id/ll_bottom"
    android:layout_alignParentBottom="true"
    android:background="@color/text_color_e"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/btn_award"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_height_45"
        android:textColor="@color/gain_red"
        android:textSize="@dimen/text_size_large"
        android:gravity="center"
        android:text="打赏"
        android:background="@drawable/item_select"/>
    <Button
        android:id="@+id/btn_cancel"
        android:layout_marginTop="@dimen/line_height"
        android:layout_width="match_parent"
        android:layout_height="@dimen/widget_height_45"
        android:textColor="@color/text_color_4"
        android:textSize="@dimen/text_size_large"
        android:gravity="center"
        android:text="手滑"
        android:background="@drawable/item_select"/>
</LinearLayout>
</RelativeLayout><!-- From: file:/F:/CompanyWork/FutureInst/res/layout/view_award_dialog.xml -->