<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/text_color_white"
    android:paddingTop="41px"
    android:paddingBottom="24px"
    android:paddingLeft="@dimen/activity_login_margin_10"
    android:paddingRight="@dimen/activity_login_margin_10"
    android:orientation="horizontal" >
    <LinearLayout 
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:minWidth="@dimen/widget_height_50"
        android:paddingLeft="@dimen/activity_login_margin_10"
        android:paddingRight="@dimen/activity_login_margin_10"
        android:orientation="vertical">
        <ImageView 
            android:id="@+id/iv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/attitude_good"/>
        <TextView 
            android:id="@+id/tv_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_color_9"
            android:text="000"
            android:drawableLeft="@drawable/agree"/>
    </LinearLayout>
	<TextView 
	    android:id="@+id/tv_comment"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textSize="@dimen/text_size_normal"
	    android:textColor="@color/text_color_9"
	    android:lineSpacingExtra="2dip"/>
</LinearLayout>
