<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_white"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="125dip">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/image_top_default"/>

        <LinearLayout
            android:id="@+id/ll_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="0.6"
            android:background="@color/text_color_white"
            android:gravity="end"
            android:padding="@dimen/margin_5">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="9天5时候关闭交易"
                android:textColor="@color/text_color_6"
                android:textSize="@dimen/text_size_small"
                />

            <View
                android:layout_width="2dip"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/dimen_3"
                android:layout_marginLeft="@dimen/margin_5"
                android:layout_marginRight="@dimen/margin_5"
                android:layout_marginTop="@dimen/dimen_3"
                android:background="@color/text_color_0"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_event_title"
        android:layout_margin="@dimen/margin_15"
        android:layout_marginLeft="@dimen/margin_20"
        android:layout_marginRight="@dimen/margin_20"
        android:textSize="@dimen/text_size_large_22"
        android:textColor="@color/text_color_4"
        android:lineSpacingExtra="@dimen/dimen_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_15"
        android:paddingRight="@dimen/margin_15"
        android:textSize="@dimen/text_size_normal"
        android:textColor="@color/text_color_4"
        android:lineSpacingExtra="3dip"
        />
    <LinearLayout
        android:gravity="center_vertical|right"
        android:layout_marginTop="@dimen/activity_login_margin_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_invivate_float"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="清算依据"
            android:textColor="@color/text_color_4"
            android:textSize="@dimen/text_size_normal"
            android:background="#F8E71C"
            />
    </LinearLayout>
</LinearLayout>
