<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/text_color_white"
    android:orientation="vertical" >
   
	<LinearLayout 
	    android:id="@+id/ll_comment"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"/>
	<RelativeLayout 
	    android:paddingLeft="@dimen/activity_login_margin_10"
	    android:paddingRight="@dimen/activity_login_margin_10"
	    android:layout_marginBottom="@dimen/widget_height_30"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content">
	    <TextView 
	     android:id="@+id/tv_addComment"
	     android:paddingRight="@dimen/margin_15"
	    android:paddingLeft="@dimen/margin_15"
	    android:gravity="right|center_vertical"
	    android:layout_width="wrap_content"
	    android:layout_height="@dimen/widget_height_40"
	    android:textSize="@dimen/text_size_large"
	    android:textColor="@drawable/comment_text"
	    android:drawableLeft="@drawable/comment_edit"
	    android:text="写评论"/>
	    <TextView 
	    android:id="@+id/tv_moreComment"
	    android:layout_alignParentRight="true"
	    android:paddingRight="@dimen/margin_15"
	    android:paddingLeft="@dimen/margin_15"
	    android:gravity="center_vertical"
	    android:layout_width="wrap_content"
	    android:layout_height="@dimen/widget_height_40"
	    android:textSize="@dimen/text_size_large"
	    android:textColor="@drawable/comment_text"
	    android:text="更多评论"
	    android:drawableRight="@drawable/comment_more"/>
	</RelativeLayout>
	
	
</LinearLayout>
