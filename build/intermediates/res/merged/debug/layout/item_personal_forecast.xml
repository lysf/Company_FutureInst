<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        android:id="@+id/ll_top"
        android:background="@color/text_color_e"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
    <TextView 
        android:id="@+id/tv_time"
        android:layout_marginTop="@dimen/margin_5"
        android:paddingLeft="@dimen/activity_login_margin_10"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_3"
        android:paddingBottom="@dimen/dimen_3"
        android:background="@color/text_color_c"
        android:textColor="@color/text_color_white"
        android:textSize="@dimen/text_size_small"
        android:text="2015-09-24"
        />
    </LinearLayout>
	<LinearLayout 
	    android:id="@+id/ll_forecast"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/item_select"
	    android:orientation="horizontal">
	    <TextView 
	        android:id="@+id/tv_title"
	        android:layout_marginLeft="@dimen/activity_login_margin_10"
	        android:layout_marginRight="@dimen/activity_login_margin_10"
	        android:paddingTop="@dimen/activity_login_margin_10"
	        android:paddingBottom="@dimen/activity_login_margin_10"
	        android:gravity="center_vertical"
	        android:layout_width="0dip"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:minHeight="@dimen/widget_height_55"
	        android:textSize="@dimen/text_size_normal"
	        android:textColor="@color/text_color_3"
	        />
	    <View 
	        android:layout_width="1px"
	        android:layout_height="match_parent"
	        android:background="@color/text_color_e"/>
	    <TextView 
	        android:id="@+id/tv_attitude"
	        android:layout_width="wrap_content"
	        android:minWidth="80dp"
	        android:layout_height="match_parent"
	        android:gravity="center"
	        android:textSize="@dimen/text_size_normal"
	        />
	    <LinearLayout 
	        android:id="@+id/ll_gain"
	        android:visibility="gone"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:orientation="horizontal">
	        <View 
	        android:layout_width="1px"
	        android:layout_height="match_parent"
	        android:background="@color/text_color_e"/>
	    <TextView 
	        android:id="@+id/tv_gain"
	        android:layout_width="wrap_content"
	        android:minWidth="80dp"
	        android:layout_height="match_parent"
	        android:gravity="center"
	        android:textSize="@dimen/text_size_normal"
	        />
	    </LinearLayout>
	    
	</LinearLayout>
	<View 
	    android:visibility="gone"
	        android:layout_width="match_parent"
	        android:layout_height="1px"
	        android:background="@color/text_color_b"/>
</LinearLayout>
