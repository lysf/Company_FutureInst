<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_article_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/find_point_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_login_margin_10"
        android:paddingRight="@dimen/activity_login_margin_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_login_margin_10"
            android:layout_marginTop="@dimen/activity_login_margin_10"
            android:gravity="center_vertical">

            <View
                android:layout_width="0dip"
                android:layout_height="@dimen/line_height"
                android:layout_weight="1"
                android:background="@color/text_color_9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_login_margin_10"
                android:text="今日观点"
                android:textColor="@color/text_color_6"
                android:textSize="@dimen/text_size_normal" />

            <View
                android:layout_width="0dip"
                android:layout_height="@dimen/line_height"
                android:layout_weight="1"
                android:background="@color/text_color_9" />
        </LinearLayout>

        <include
            android:id="@+id/view_select_point"
            layout="@layout/view_selection_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_login_margin_10"
            android:layout_marginTop="@dimen/activity_login_margin_10"
            android:gravity="center_vertical">

            <View
                android:layout_width="0dip"
                android:layout_height="@dimen/line_height"
                android:layout_weight="1"
                android:background="@color/text_color_9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_login_margin_10"
                android:text="观点精选"
                android:textColor="@color/text_color_6"
                android:textSize="@dimen/text_size_normal" />

            <View
                android:layout_width="0dip"
                android:layout_height="@dimen/line_height"
                android:layout_weight="1"
                android:background="@color/text_color_9" />
        </LinearLayout>


    </LinearLayout>
</LinearLayout><!-- From: file:/F:/CompanyWork/FutureInst/res/layout/view_article_top.xml -->